{
  "$ref": "#/definitions/blog",
  "definitions": {
    "blog": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "maxLength": 100
        },
        "excerpt": {
          "type": "string",
          "maxLength": 160
        },
        "pubDate": {
          "anyOf": [
            {
              "type": "string",
              "format": "date-time"
            },
            {
              "type": "string",
              "format": "date"
            },
            {
              "type": "integer",
              "format": "unix-time"
            }
          ]
        },
        "updatedDate": {
          "anyOf": [
            {
              "type": "string",
              "format": "date-time"
            },
            {
              "type": "string",
              "format": "date"
            },
            {
              "type": "integer",
              "format": "unix-time"
            }
          ]
        },
        "author": {
          "type": "string",
          "default": "TinkByte Team"
        },
        "authorBio": {
          "type": "string"
        },
        "authorAvatar": {
          "type": "string"
        },
        "authorRole": {
          "type": "string"
        },
        "authorSocial": {
          "type": "object",
          "properties": {
            "twitter": {
              "type": "string"
            },
            "linkedin": {
              "type": "string"
            },
            "github": {
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        "image": {
          "type": "string"
        },
        "imageAlt": {
          "type": "string"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "category": {
          "type": "string"
        },
        "featured": {
          "type": "boolean",
          "default": false
        },
        "trending": {
          "type": "boolean",
          "default": false
        },
        "draft": {
          "type": "boolean",
          "default": false
        },
        "readTime": {
          "type": "string"
        },
        "audioUrl": {
          "type": "string"
        },
        "audioDuration": {
          "type": "string"
        },
        "audioTranscript": {
          "type": "string"
        },
        "seo": {
          "type": "object",
          "properties": {
            "title": {
              "type": "string"
            },
            "description": {
              "type": "string"
            },
            "canonical": {
              "type": "string"
            },
            "noindex": {
              "type": "boolean",
              "default": false
            }
          },
          "additionalProperties": false
        },
        "$schema": {
          "type": "string"
        }
      },
      "required": [
        "title",
        "excerpt",
        "pubDate",
        "category"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}