{
  "$ref": "#/definitions/blog",
  "definitions": {
    "blog": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "maxLength": 100
        },
        "excerpt": {
          "type": "string",
          "maxLength": 160
        },
        "pubDate": {
          "anyOf": [
            {
              "type": "string",
              "format": "date-time"
            },
            {
              "type": "string",
              "format": "date"
            },
            {
              "type": "integer",
              "format": "unix-time"
            }
          ]
        },
        "updatedDate": {
          "anyOf": [
            {
              "type": "string",
              "format": "date-time"
            },
            {
              "type": "string",
              "format": "date"
            },
            {
              "type": "integer",
              "format": "unix-time"
            }
          ]
        },
        "author": {
          "type": "string",
          "default": "TinkByte Team"
        },
        "authorBio": {
          "type": "string"
        },
        "authorAvatar": {
          "type": "string"
        },
        "authorRole": {
          "type": "string"
        },
        "authorSocial": {
          "type": "object",
          "properties": {
            "twitter": {
              "type": "string"
            },
            "linkedin": {
              "type": "string"
            },
            "github": {
              "type": "string"
            },
            "website": {
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        "authorInfo": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "bio": {
              "type": "string"
            },
            "avatar": {
              "type": "string"
            },
            "role": {
              "type": "string"
            },
            "company": {
              "type": "string"
            },
            "email": {
              "type": "string"
            },
            "social": {
              "type": "object",
              "properties": {
                "twitter": {
                  "type": "string"
                },
                "linkedin": {
                  "type": "string"
                },
                "github": {
                  "type": "string"
                },
                "website": {
                  "type": "string"
                }
              },
              "additionalProperties": false
            }
          },
          "required": [
            "name"
          ],
          "additionalProperties": false
        },
        "image": {
          "type": "string"
        },
        "imageAlt": {
          "type": "string"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "category": {
          "type": "string"
        },
        "storyType": {
          "type": "string"
        },
        "featured": {
          "type": "boolean",
          "default": false
        },
        "trending": {
          "type": "boolean",
          "default": false
        },
        "draft": {
          "type": "boolean",
          "default": false
        },
        "readTime": {
          "type": "string"
        },
        "audioUrl": {
          "type": "string"
        },
        "audioDuration": {
          "type": "string"
        },
        "audioTranscript": {
          "type": "string"
        },
        "newsletterWorthy": {
          "type": "boolean",
          "default": false
        },
        "newsletterSummary": {
          "type": "string"
        },
        "readingProgress": {
          "type": "boolean",
          "default": true
        },
        "tableOfContents": {
          "type": "boolean",
          "default": true
        },
        "seo": {
          "type": "object",
          "properties": {
            "title": {
              "type": "string"
            },
            "description": {
              "type": "string"
            },
            "canonical": {
              "type": "string"
            },
            "noindex": {
              "type": "boolean",
              "default": false
            },
            "schema": {
              "type": "string",
              "enum": [
                "Article",
                "BlogPosting",
                "TechArticle"
              ],
              "default": "Article"
            }
          },
          "additionalProperties": false
        },
        "$schema": {
          "type": "string"
        }
      },
      "required": [
        "title",
        "excerpt",
        "pubDate",
        "category"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}