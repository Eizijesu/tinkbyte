{
  "$ref": "#/definitions/blog",
  "definitions": {
    "blog": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "maxLength": 100
        },
        "excerpt": {
          "type": "string",
          "maxLength": 160
        },
        "pubDate": {
          "anyOf": [
            {
              "type": "string",
              "format": "date-time"
            },
            {
              "type": "string",
              "format": "date"
            },
            {
              "type": "integer",
              "format": "unix-time"
            }
          ]
        },
        "updatedDate": {
          "anyOf": [
            {
              "type": "string",
              "format": "date-time"
            },
            {
              "type": "string",
              "format": "date"
            },
            {
              "type": "integer",
              "format": "unix-time"
            }
          ]
        },
        "authorInfo": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "bio": {
              "type": "string"
            },
            "avatar": {
              "type": "string"
            },
            "role": {
              "type": "string"
            },
            "company": {
              "type": "string"
            },
            "email": {
              "type": "string"
            },
            "social": {
              "type": "object",
              "properties": {
                "twitter": {
                  "type": "string"
                },
                "linkedin": {
                  "type": "string"
                },
                "github": {
                  "type": "string"
                },
                "website": {
                  "type": "string"
                }
              },
              "additionalProperties": false
            }
          },
          "required": [
            "name"
          ],
          "additionalProperties": false
        },
        "image": {
          "type": "string"
        },
        "imageAlt": {
          "type": "string"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "category": {
          "type": "string",
          "enum": [
            "product-strategy",
            "ai-evolution",
            "developer-tools",
            "tech-culture",
            "startup-insights",
            "build-thinking",
            "learning-by-doing",
            "community-innovation",
            "global-perspective",
            "no-fluff-coverage",
            "research-backed"
          ]
        },
        "storyType": {
          "type": "string",
          "enum": [
            "feature",
            "deep-dive",
            "quick-read",
            "data-story",
            "build-guide",
            "failure-story",
            "global-spotlight"
          ]
        },
        "featured": {
          "type": "boolean",
          "default": false
        },
        "trending": {
          "type": "boolean",
          "default": false
        },
        "draft": {
          "type": "boolean",
          "default": false
        },
        "readTime": {
          "type": "string"
        },
        "audioUrl": {
          "type": "string"
        },
        "audioDuration": {
          "type": "string"
        },
        "audioTranscript": {
          "type": "string"
        },
        "seo": {
          "type": "object",
          "properties": {
            "title": {
              "type": "string"
            },
            "description": {
              "type": "string"
            },
            "canonical": {
              "type": "string"
            },
            "noindex": {
              "type": "boolean",
              "default": false
            }
          },
          "additionalProperties": false
        },
        "$schema": {
          "type": "string"
        }
      },
      "required": [
        "title",
        "excerpt",
        "pubDate",
        "authorInfo",
        "category"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}