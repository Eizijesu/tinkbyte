{
  "name": "tinkbyte",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "tinacms dev -c \"astro dev\"",
    "build": "astro check && tinacms build && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "sync": "astro sync",
    "check": "astro check",
    "lint": "astro check && tsc --noEmit",
    "lint:fix": "astro check --fix",
    "type-check": "astro check",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "rm -rf dist .astro node_modules/.cache",
    "clean:win": "if exist node_modules rmdir /s /q node_modules && if exist package-lock.json del package-lock.json && if exist .astro rmdir /s /q .astro && if exist dist rmdir /s /q dist",
    "reset": "npm run clean:win && npm install && npm run sync",
    "tina:build": "tinacms build",
    "tina:dev": "tinacms dev"
  },
  "dependencies": {
    "@astrojs/mdx": "^4.3.0",
    "@astrojs/react": "^4.0.4",
    "@astrojs/rss": "^3.0.0",
    "@astrojs/sitemap": "^3.0.0",
    "@astrojs/tailwind": "^6.0.2",
    "@fontsource/space-grotesk": "^5.2.8",
    "@tailwindcss/forms": "^0.5.10",
    "@tinacms/cli": "^1.9.8",
    "@tinacms/datalayer": "^1.3.18",
    "astro": "^5.8.1",
    "date-fns": "^3.0.0",
    "fuse.js": "^7.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.5.0",
    "reading-time": "^1.5.0",
    "rehype-autolink-headings": "^6.1.1",
    "rehype-slug": "^5.1.0",
    "remark-gfm": "^3.0.1",
    "tailwindcss": "^3.3.3",
    "vite": "^6.3.5"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.0",
    "@babel/preset-typescript": "^7.27.1",
    "@tailwindcss/typography": "^0.5.10",
    "@types/node": "^24.0.0",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "astro-robots-txt": "^1.0.0",
    "autoprefixer": "^10.4.21",
    "graphql": "^16.11.0",
    "graphql-sock": "^1.0.1",
    "postcss": "^8.5.4",
    "prettier": "^3.2.5",
    "prettier-plugin-astro": "^0.13.0",
    "tinacms": "^2.7.8",
    "typescript": "^5.3.3"
  },
  "overrides": {
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "esbuild": "0.25.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
