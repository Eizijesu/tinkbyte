{
  "name": "tinkbyte",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "tinacms dev -c \"astro dev\"",
    "dev:tina": "tinacms dev -c \"astro dev\"",
    "dev:clean": "astro dev",
    "dev:sync": "npm run sync:content && npm run dev",
    "preview": "astro preview",
    "build": "astro check && astro build",
    "build:tina": "npm run sync:content && npm run tina:build && astro check && astro build && xcopy public\\admin dist\\admin /E /I /Y",
    "build:prod": "set NODE_ENV=production && npm run sync:prod && astro build && xcopy public\\admin dist\\admin /E /I /Y",
    "build:debug": "astro build --verbose",
    "deploy": "npm run build",
    "deploy:tina": "npm run build:tina",
    "deploy:debug": "npm run clean && npm run build:debug",
    "clean": "rm -rf dist .astro node_modules/.cache .tina",
    "clean:win": "if exist node_modules rmdir /s /q node_modules && if exist package-lock.json del package-lock.json && if exist .astro rmdir /s /q .astro && if exist dist rmdir /s /q dist && if exist .tina rmdir /s /q .tina",
    "reset": "npm run clean:win && npm install && npm run sync",
    "sync": "astro sync",
    "sync:content": "node scripts/sync-content.mjs",
    "sync:dev": "node scripts/sync-content.mjs --env=development",
    "sync:prod": "node scripts/sync-content.mjs --env=production",
    "sync-content:force": "node scripts/sync-content.mjs --force",
    "tina:init": "tinacms init",
    "tina:dev": "tinacms dev --local",
    "tina:build": "tinacms build && if exist public\\admin\\.gitignore del public\\admin\\.gitignore",
    "create-categories": "node scripts/create-categories.js",
    "astro": "astro",
    "check": "astro check",
    "lint": "astro check && tsc --noEmit",
    "lint:fix": "astro check --fix",
    "type-check": "astro check",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "dependencies": {
    "@astrojs/cloudflare": "^12.6.0",
    "@astrojs/mdx": "^4.3.2",
    "@astrojs/react": "^4.3.0",
    "@astrojs/rss": "^3.0.0",
    "@astrojs/sitemap": "^3.0.0",
    "@astrojs/tailwind": "^6.0.2",
    "@fontsource/space-grotesk": "^5.2.8",
    "@supabase/supabase-js": "^2.52.0",
    "@tailwindcss/forms": "^0.5.10",
    "@tinacms/datalayer": "^1.3.18",
    "asnpm i astrotro": "^5.11.0",
    "bcryptjs": "^3.0.2",
    "cookie": "^1.0.2",
    "date-fns": "^3.0.0",
    "dotenv": "^17.2.0",
    "emoji-mart": "^5.6.0",
    "flag-icons": "^7.5.0",
    "fuse.js": "^7.0.0",
    "gray-matter": "^4.0.3",
    "linkify-it": "^5.0.0",
    "marked": "^15.0.12",
    "prismjs": "^1.30.0",
    "qrcode": "^1.5.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.5.0",
    "react-markdown": "^10.1.0",
    "react-syntax-highlighter": "^15.6.1",
    "react-tinacms-github": "^0.52.0",
    "reading-time": "^1.5.0",
    "rehype-autolink-headings": "^6.1.1",
    "rehype-slug": "^5.1.0",
    "remark-gfm": "^3.0.1",
    "resend": "^4.7.0",
    "speakeasy": "^2.0.0",
    "tailwindcss": "^3.3.3",
    "vite": "^6.3.5"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.0",
    "@babel/preset-typescript": "^7.27.1",
    "@tailwindcss/typography": "^0.5.10",
    "@tinacms/cli": "^1.10.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/marked": "^5.0.2",
    "@types/node": "^24.0.14",
    "@types/qrcode": "^1.5.5",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@types/speakeasy": "^2.0.10",
    "astro-robots-txt": "^1.0.0",
    "autoprefixer": "^10.4.21",
    "graphql": "^16.11.0",
    "graphql-sock": "^1.0.1",
    "postcss": "^8.5.4",
    "prettier": "^3.2.5",
    "prettier-plugin-astro": "^0.13.0",
    "supabase": "^2.30.4",
    "tinacms": "^2.8.1",
    "typescript": "^5.3.3"
  },
  "overrides": {
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "esbuild": "0.25.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
