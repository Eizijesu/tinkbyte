        const nameInput = this.container.querySelector(
          ".user-name"
        ) as HTMLInputElement;
        const emailInput = this.container.querySelector(
          ".user-email"
        ) as HTMLInputElement;

        authorName = nameInput?.value.trim() || "";
        authorEmail = emailInput?.value.trim() || "";

        if (!authorName) {
