        authorEmail = this.currentUser.email;

        commentData = {
          article_id: this.postSlug,
          user_id: this.currentUser.id,
          parent_id: this.replyingTo || null,
          content: content,
          guest_name: null,
          guest_email: null,
          is_edited: false,
          is_deleted: false,
        };
      } else {
