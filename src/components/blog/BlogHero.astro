---
// src/components/blog/BlogHero.astro
export interface Props {
  title: string;
  subtitle?: string;
  description?: string;
  image?: string;
  className?: string;
}

const { title, subtitle, description, image, className = "" } = Astro.props;
---

<section
  class={`relative py-16 lg:py-24 px-4 sm:px-6 overflow-hidden ${className}`}
>
  {
    image && (
      <div class="absolute inset-0 z-0">
        <img src={image} alt={title} class="w-full h-full object-cover" />
        <div class="absolute inset-0 bg-black/60" />
      </div>
    )
  }

  <div class="relative z-10 max-w-4xl mx-auto text-center">
    {
      subtitle && (
        <div class="inline-flex items-center px-4 py-2 bg-white/10 backdrop-blur-sm rounded-full border border-white/20 mb-6">
          <span class="text-sm font-semibold uppercase tracking-wider text-white">
            {subtitle}
          </span>
        </div>
      )
    }

    <h1
      class={`text-4xl lg:text-5xl xl:text-6xl font-bold mb-6 font-space-grotesk uppercase tracking-wide ${image ? "text-white" : "text-zinc-900 dark:text-zinc-100"}`}
    >
      {title}
    </h1>

    {
      description && (
        <p
          class={`text-xl lg:text-2xl leading-relaxed max-w-3xl mx-auto ${image ? "text-gray-200" : "text-zinc-600 dark:text-zinc-400"}`}
        >
          {description}
        </p>
      )
    }
  </div>
</section>
