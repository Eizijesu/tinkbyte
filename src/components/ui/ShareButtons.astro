---
// In ShareButtons.astro, update the interface
export interface Props {
  url?: string;
  title: string;
  description?: string;
  className?: string;
  variant?: "horizontal" | "vertical";
  showLabels?: boolean;
}

const {
  url = Astro.url.href, // Fallback to current page URL
  title,
  description = "",
  className = "",
  variant = "horizontal",
  showLabels = true,
} = Astro.props;

// Encode URL and text for sharing
const encodedUrl = encodeURIComponent(url);
const encodedTitle = encodeURIComponent(title);
const encodedDescription = encodeURIComponent(description);

// Social sharing URLs
const shareUrls = {
  twitter: `https://twitter.com/intent/tweet?url=${encodedUrl}&text=${encodedTitle}`,
  linkedin: `https://www.linkedin.com/sharing/share-offsite/?url=${encodedUrl}`,
  facebook: `https://www.facebook.com/sharer/sharer.php?u=${encodedUrl}`,
  reddit: `https://reddit.com/submit?url=${encodedUrl}&title=${encodedTitle}`,
  email: `mailto:?subject=${encodedTitle}&body=${encodedDescription}%0A%0A${encodedUrl}`,
};
---

<div
  class={`share-buttons ${variant === "vertical" ? "flex flex-col gap-3" : "flex flex-wrap gap-4"} ${className}`}
>
  <h3
    class="text-lg font-semibold text-zinc-900 dark:text-zinc-100 uppercase tracking-wide mb-2"
  >
    {showLabels ? "SHARE THIS ARTICLE" : "SHARE"}
  </h3>

  <div
    class={variant === "vertical"
      ? "flex flex-col gap-2"
      : "flex flex-wrap gap-3"}
  >
    <!-- Twitter -->
    <a
      href={shareUrls.twitter}
      target="_blank"
      rel="noopener noreferrer"
      class="share-btn group flex items-center gap-2 px-4 py-2 bg-blue-500 hover:bg-blue-600 text-white rounded transition-all duration-200 hover:scale-105 uppercase tracking-wide text-sm"
      aria-label="Share on Twitter"
    >
      <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
        <path
          d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84"
        ></path>
      </svg>
      {showLabels && <span>TWITTER</span>}
    </a>

    <!-- LinkedIn -->
    <a
      href={shareUrls.linkedin}
      target="_blank"
      rel="noopener noreferrer"
      class="share-btn group flex items-center gap-2 px-4 py-2 bg-blue-700 hover:bg-blue-800 text-white rounded transition-all duration-200 hover:scale-105 uppercase tracking-wide text-sm"
      aria-label="Share on LinkedIn"
    >
      <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
        <path
          d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
        ></path>
      </svg>
      {showLabels && <span>LINKEDIN</span>}
    </a>

    <!-- Facebook -->
    <a
      href={shareUrls.facebook}
      target="_blank"
      rel="noopener noreferrer"
      class="share-btn group flex items-center gap-2 px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded transition-all duration-200 hover:scale-105 uppercase tracking-wide text-sm"
      aria-label="Share on Facebook"
    >
      <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
        <path
          d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"
        ></path>
      </svg>
      {showLabels && <span>FACEBOOK</span>}
    </a>

    <!-- Reddit -->
    <a
      href={shareUrls.reddit}
      target="_blank"
      rel="noopener noreferrer"
      class="share-btn group flex items-center gap-2 px-4 py-2 bg-orange-600 hover:bg-orange-700 text-white rounded transition-all duration-200 hover:scale-105 uppercase tracking-wide text-sm"
      aria-label="Share on Reddit"
    >
      <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
        <path
          d="M12 0A12 12 0 0 0 0 12a12 12 0 0 0 12 12 12 12 0 0 0 12-12A12 12 0 0 0 12 0zm5.01 4.744c.688 0 1.25.561 1.25 1.249a1.25 1.25 0 0 1-2.498.056l-2.597-.547-.8 3.747c1.824.07 3.48.632 4.674 1.488.308-.309.73-.491 1.207-.491.968 0 1.754.786 1.754 1.754 0 .716-.435 1.333-1.01 1.614a3.111 3.111 0 0 1 .042.52c0 2.694-3.13 4.87-7.004 4.87-3.874 0-7.004-2.176-7.004-4.87 0-.183.015-.366.043-.534A1.748 1.748 0 0 1 4.028 12c0-.968.786-1.754 1.754-1.754.463 0 .898.196 1.207.49 1.207-.883 2.878-1.43 4.744-1.487l.885-4.182a.342.342 0 0 1 .14-.197.35.35 0 0 1 .238-.042l2.906.617a1.214 1.214 0 0 1 1.108-.701zM9.25 12C8.561 12 8 12.562 8 13.25c0 .687.561 1.248 1.25 1.248.687 0 1.248-.561 1.248-1.249 0-.688-.561-1.249-1.249-1.249zm5.5 0c-.687 0-1.248.561-1.248 1.25 0 .687.561 1.248 1.249 1.248.688 0 1.249-.561 1.249-1.249 0-.687-.562-1.249-1.25-1.249zm-5.466 3.99a.327.327 0 0 0-.231.094.33.33 0 0 0 0 .463c.842.842 2.484.913 2.961.913.477 0 2.105-.056 2.961-.913a.361.361 0 0 0 .029-.463.33.33 0 0 0-.464 0c-.547.533-1.684.73-2.512.73-.828 0-1.979-.196-2.512-.73a.326.326 0 0 0-.232-.095z"
        ></path>
      </svg>
      {showLabels && <span>REDDIT</span>}
    </a>

    <!-- Email -->
    <a
      href={shareUrls.email}
      class="share-btn group flex items-center gap-2 px-4 py-2 bg-zinc-600 hover:bg-zinc-700 text-white rounded transition-all duration-200 hover:scale-105 uppercase tracking-wide text-sm"
      aria-label="Share via Email"
    >
      <svg
        class="w-4 h-4"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
        ></path>
      </svg>
      {showLabels && <span>EMAIL</span>}
    </a>

    <!-- Copy Link -->
    <button
      id="copy-link-btn"
      data-url={url}
      class="share-btn group flex items-center gap-2 px-4 py-2 bg-zinc-500 hover:bg-zinc-600 text-white rounded transition-all duration-200 hover:scale-105 uppercase tracking-wide text-sm"
      aria-label="Copy Link"
    >
      <svg
        class="w-4 h-4"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"
        ></path>
      </svg>
      {showLabels && <span id="copy-text">COPY LINK</span>}
    </button>
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const copyBtn = document.getElementById("copy-link-btn");
    const copyText = document.getElementById("copy-text");

    if (copyBtn && copyText) {
      copyBtn.addEventListener("click", async () => {
        const url = copyBtn.dataset.url;
        if (!url) return;

        try {
          await navigator.clipboard.writeText(url);
          copyText.textContent = "COPIED!";
          copyBtn.classList.add("bg-green-600", "hover:bg-green-700");
          copyBtn.classList.remove("bg-zinc-500", "hover:bg-zinc-600");

          setTimeout(() => {
            copyText.textContent = "COPY LINK";
            copyBtn.classList.remove("bg-green-600", "hover:bg-green-700");
            copyBtn.classList.add("bg-zinc-500", "hover:bg-zinc-600");
          }, 2000);
        } catch (err) {
          console.error("Failed to copy: ", err);
          copyText.textContent = "FAILED";
          setTimeout(() => {
            copyText.textContent = "COPY LINK";
          }, 2000);
        }
      });
    }

    // Track share clicks
    const shareButtons = document.querySelectorAll(".share-btn");
    shareButtons.forEach((btn) => {
      btn.addEventListener("click", (e) => {
        const platform =
          e.currentTarget
            .getAttribute("aria-label")
            ?.replace("Share on ", "")
            .replace("Share via ", "") || "Unknown";
        console.log(`Shared on: ${platform}`);
        // Add analytics tracking here
      });
    });
  });
</script>
