  :global(.dark) .feedback-form-container,
  .feedback-widget.dark .feedback-form-container {
    background: #1f2937;
    color: #f9fafb;
  }

  :global(.dark) .feedback-form-header,
  .feedback-widget.dark .feedback-form-header {
    border-bottom-color: #374151;
  }

