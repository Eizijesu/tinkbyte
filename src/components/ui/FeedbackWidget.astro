      width: auto;
      height: auto;
      padding: 12px 16px;
      gap: 8px;
    }

    .feedback-trigger span {
      display: inline;
    }

    .feedback-trigger svg {
      width: 20px;
      height: 20px;
    }

    .feedback-form-container {
      padding: 2rem;
      width: 90%;
    }

    .feedback-form-header h3 {
      font-size: 1.5rem;
    }
  }

  @media (min-width: 1280px) {
    .feedback-widget.bottom-right {
      bottom: 2rem;
      right: 2rem;
      top: auto;
    }

    .feedback-widget.bottom-left {
      bottom: 2rem;
      left: 2rem;
      top: auto;
      right: auto;
    }

    .feedback-widget.top-right {
      top: 2rem;
      right: 2rem;
    }

    .feedback-widget.top-left {
      top: 2rem;
      left: 2rem;
