    padding-top: 2rem;
    border-top: 1px solid #334155;
  }

  .footer-bottom-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    text-align: center;
  }

  @media (min-width: 768px) {
    .footer-bottom-content {
      flex-direction: row;
      justify-content: space-between;
      text-align: left;
    }
  }

  .copyright-text {
    color: #64748b;
    font-size: 0.875rem;
    font-family: "Space Grotesk", sans-serif;
