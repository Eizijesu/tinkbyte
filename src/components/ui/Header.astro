<script>
  import { authManager } from "../../lib/auth.js";
  import { TinkByteAPI } from "../../lib/supabase.js";

  // Enhanced event listener interface to handle both Element and Document
  interface EventListenerRecord {
    target: Element | Document;
    event: string;
    handler: EventListener;
  }

  // Header Management Singleton
  class HeaderManager {
    private static instance: HeaderManager;
    private initialized = false;
    private authUnsubscribe: (() => void) | null = null;
    private notificationInterval: NodeJS.Timeout | null = null;
    private eventListeners: EventListenerRecord[] = [];

    static getInstance(): HeaderManager {
      if (!HeaderManager.instance) {
        HeaderManager.instance = new HeaderManager();
      }
      return HeaderManager.instance;
    }

    async initialize(): Promise<void> {
      if (this.initialized) return;

      try {
        console.log("üîÑ Header: Initializing auth state...");
        
        // Initialize auth manager singleton
        await authManager.initialize();
        
        // Set up auth state listener with better error handling
        this.authUnsubscribe = authManager.onAuthChange((user, profile) => {
          try {
            this.updateAuthUI(user, profile);
          } catch (error) {
            console.error("‚ùå Header: Error updating auth UI:", error);
          }
        });

        // Setup event listeners
        this.setupEventListeners();
        
        // Setup cleanup
        this.setupCleanup();

        this.initialized = true;
        console.log("‚úÖ Header: Initialized successfully");

      } catch (error) {
        console.error("‚ùå Header: Auth initialization failed:", error);
        // Show signin button as fallback
        this.showSigninButton();
      }
    }

    private updateAuthUI(user: any, profile: any): void {
      const elements = {
        signinBtn: document.getElementById('signin-btn'),
        accountDropdown: document.getElementById('account-dropdown'),
        mobileSigninSection: document.getElementById('mobile-signin-section'),
        mobileAccountSection: document.getElementById('mobile-account-section')
      };

      if (user) {
        console.log('‚úÖ Header: User signed in:', user.email);
        
        // Hide sign in button, show account dropdown
        if (elements.signinBtn) elements.signinBtn.style.display = 'none';
        if (elements.accountDropdown) elements.accountDropdown.style.display = 'block';
        if (elements.mobileSigninSection) elements.mobileSigninSection.style.display = 'none';
        if (elements.mobileAccountSection) elements.mobileAccountSection.style.display = 'flex';
        
        // Update account info
        this.updateAccountInfo(user, profile);
        
        // Setup notification system for authenticated users
        setTimeout(() => {
          this.setupNotificationSystem();
        }, 100);
      } else {
        console.log('‚ùå Header: User not signed in');
        this.showSigninButton();
      }
    }

    private showSigninButton(): void {
      const elements = {
        signinBtn: document.getElementById('signin-btn'),
        accountDropdown: document.getElementById('account-dropdown'),
        mobileSigninSection: document.getElementById('mobile-signin-section'),
        mobileAccountSection: document.getElementById('mobile-account-section'),
        notificationContainer: document.getElementById('notification-container')
      };

      // Show sign in button, hide account dropdown
      if (elements.signinBtn) elements.signinBtn.style.display = 'inline-flex';
      if (elements.accountDropdown) elements.accountDropdown.style.display = 'none';
      if (elements.mobileSigninSection) elements.mobileSigninSection.style.display = 'flex';
      if (elements.mobileAccountSection) elements.mobileAccountSection.style.display = 'none';
      if (elements.notificationContainer) elements.notificationContainer.style.display = 'none';
    }

    private updateAccountInfo(user: any, profile: any): void {
      try {
        const displayName = authManager.getDisplayName();

        // Update desktop dropdown
        const accountName = document.getElementById('account-name');
        if (accountName) {
          accountName.textContent = displayName.length > 6 ? displayName.substring(0, 6) + '...' : displayName;
        }

        // Update mobile dropdown
        const mobileAccountName = document.getElementById('mobile-account-name');
        if (mobileAccountName) {
          mobileAccountName.textContent = displayName;
        }
      } catch (error) {
        console.error("‚ùå Header: Error updating account info:", error);
      }
    }

    // Enhanced notification system
    private async setupNotificationSystem(): Promise<void> {
      try {
        const elements = {
          container: document.getElementById('notification-container'),
          bell: document.getElementById('notification-bell'),
          dropdown: document.getElementById('notification-dropdown'),
          count: document.getElementById('notification-count'),
          list: document.getElementById('notification-list'),
          markAllRead: document.getElementById('mark-all-read')
        };

        if (!elements.container || !elements.bell || !elements.dropdown) {
          return; // Elements not found, skip setup
        }

        // Only show notifications for authenticated users
        const isAuthenticated = await authManager.isAuthenticated();
        if (!isAuthenticated) {
          elements.container.style.display = 'none';
          return;
        }

        elements.container.style.display = 'block';

        // Load initial notification count
        await this.loadNotificationCount();

        // Set up click handlers
        this.addEventListenerWithCleanup(elements.bell, 'click', async (e: Event) => {
          e.stopPropagation();
          
          if (elements.dropdown!.classList.contains('show')) {
            elements.dropdown!.classList.remove('show');
          } else {
            await this.loadNotifications();
            elements.dropdown!.classList.add('show');
          }
        });

        // Close dropdown when clicking outside
        this.addEventListenerWithCleanup(document, 'click', (e: Event) => {
          const target = e.target as HTMLElement;
          if (!elements.container!.contains(target)) {
            elements.dropdown!.classList.remove('show');
          }
        });

        // Mark all as read
        if (elements.markAllRead) {
          this.addEventListenerWithCleanup(elements.markAllRead, 'click', async () => {
            await this.markAllNotificationsAsRead();
          });
        }

        // Poll for new notifications every 30 seconds
        this.notificationInterval = setInterval(() => {
          this.loadNotificationCount();
        }, 30000);

      } catch (error) {
        console.error('‚ùå Error setting up notification system:', error);
      }
    }

    private async loadNotificationCount(): Promise<void> {
      try {
        const result = await TinkByteAPI.getUnreadNotificationCount();
        
        const notificationCount = document.getElementById('notification-count');
        if (notificationCount && result.success) {
          const count = result.count || 0;
          if (count > 0) {
            notificationCount.textContent = count > 99 ? '99+' : count.toString();
            notificationCount.style.display = 'flex';
          } else {
            notificationCount.style.display = 'none';
          }
        }
      } catch (error) {
        console.error('‚ùå Error loading notification count:', error);
      }
    }

    private async loadNotifications(): Promise<void> {
      try {
        const notificationList = document.getElementById('notification-list');
        if (!notificationList) return;

        // Show loading
        notificationList.innerHTML = `
          <div class="notification-loading">
            <div class="loading-spinner"></div>
            <p>Loading notifications...</p>
          </div>
        `;

        const result = await TinkByteAPI.getUserNotifications(20);

        if (result.success && result.data && result.data.length > 0) {
          const notifications = result.data;
          let hasUnread = false;

          notificationList.innerHTML = notifications.map((notification: any) => {
            const isUnread = !notification.is_read;
            if (isUnread) hasUnread = true;

            const timeAgo = this.getTimeAgo(new Date(notification.created_at));
            const commenterName = notification.comments?.profiles?.display_name || 'Someone';
            const commenterAvatar = this.getAvatarUrl(notification.comments?.profiles);

            return `
              <div class="notification-item ${isUnread ? 'unread' : ''}" data-notification-id="${notification.id}" data-comment-id="${notification.comment_id}">
                <div class="notification-content">
                  <img src="${commenterAvatar}" alt="${commenterName}" class="notification-avatar" />
                  <div class="notification-text">
                    <div class="notification-message">
                      <strong>${commenterName}</strong> mentioned you in a comment
                    </div>
                    <div class="notification-time">${timeAgo}</div>
                  </div>
                </div>
              </div>
            `;
          }).join('');

          // Show/hide mark all read button
          const markAllRead = document.getElementById('mark-all-read');
          if (markAllRead) {
            markAllRead.style.display = hasUnread ? 'block' : 'none';
          }

          // Add click handlers for notifications
          notificationList.querySelectorAll('.notification-item').forEach((item) => {
            const htmlItem = item as HTMLElement;
            this.addEventListenerWithCleanup(htmlItem, 'click', async () => {
              const notificationId = htmlItem.dataset.notificationId;
              
              // Mark as read
              if (htmlItem.classList.contains('unread') && notificationId) {
                await this.markNotificationAsRead(notificationId);
                htmlItem.classList.remove('unread');
                await this.loadNotificationCount();
              }

              // Close the dropdown
              const dropdown = document.getElementById('notification-dropdown');
              if (dropdown) {
                dropdown.classList.remove('show');
              }
            });
          });

        } else {
          // No notifications
          notificationList.innerHTML = `
            <div class="notification-empty">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M18 8A6 6 0 0 0 6 8c0 7-3 9-3 9h18s-3-2-3-9"></path>
                <path d="M13.73 21a2 2 0 0 1-3.46 0"></path>
              </svg>
              <p>No notifications yet</p>
              <p style="font-size: 0.75rem; opacity: 0.7;">You'll see mentions and replies here</p>
            </div>
          `;

          const markAllRead = document.getElementById('mark-all-read');
          if (markAllRead) {
            markAllRead.style.display = 'none';
          }
        }

      } catch (error) {
        console.error('‚ùå Error loading notifications:', error);
        const notificationList = document.getElementById('notification-list');
        if (notificationList) {
          notificationList.innerHTML = `
            <div class="notification-empty">
              <p>Failed to load notifications</p>
              <button onclick="window.headerManager.loadNotifications()" style="margin-top: 0.5rem; padding: 0.5rem 1rem; background: #243788; color: white; border: none; cursor: pointer;">
                Try Again
              </button>
            </div>
          `;
        }
      }
    }

    private async markNotificationAsRead(notificationId: string): Promise<void> {
      try {
        await TinkByteAPI.markNotificationAsRead(notificationId);
      } catch (error) {
        console.error('‚ùå Error marking notification as read:', error);
      }
    }

    private async markAllNotificationsAsRead(): Promise<void> {
      try {
        const unreadItems = document.querySelectorAll('.notification-item.unread');
        
        for (const item of unreadItems) {
          const htmlItem = item as HTMLElement;
          const notificationId = htmlItem.dataset.notificationId;
          if (notificationId) {
            await this.markNotificationAsRead(notificationId);
            htmlItem.classList.remove('unread');
          }
        }

        // Update count and hide button
        await this.loadNotificationCount();
        const markAllRead = document.getElementById('mark-all-read');
        if (markAllRead) {
          markAllRead.style.display = 'none';
        }

      } catch (error) {
        console.error('‚ùå Error marking all notifications as read:', error);
      }
    }

    private getTimeAgo(date: Date): string {
      const now = new Date();
      const diffInSeconds = Math.floor((now.getTime() - date.getTime()) / 1000);

      if (diffInSeconds < 60) return 'just now';
      if (diffInSeconds < 3600) return `${Math.floor(diffInSeconds / 60)}m ago`;
      if (diffInSeconds < 86400) return `${Math.floor(diffInSeconds / 3600)}h ago`;
      if (diffInSeconds < 604800) return `${Math.floor(diffInSeconds / 86400)}d ago`;
      return date.toLocaleDateString();
    }

    private getAvatarUrl(profile: any): string {
      if (!profile) return '/images/avatars/preset-1.svg';
      
      if (profile.avatar_type === 'uploaded' && profile.avatar_url) {
        return profile.avatar_url;
      }
      
      if (profile.avatar_type === 'google' && profile.avatar_url) {
        return profile.avatar_url;
      }
      
      const presetId = profile.avatar_preset_id || 1;
      return `/images/avatars/preset-${presetId}.svg`;
    }

    private setupEventListeners(): void {
      try {
        // Account dropdown functionality
        this.setupAccountDropdown();
        
        // Sign out functionality
        this.setupSignoutHandlers();
        
        // Setup existing mobile menu and dropdown functionality
        this.setupExistingEventListeners();

      } catch (error) {
        console.error("‚ùå Header: Error setting up event listeners:", error);
      }
    }

    private setupAccountDropdown(): void {
      const accountDropdownBtn = document.getElementById('account-dropdown-btn');
      const accountMenu = document.getElementById('account-menu');
      const accountDropdown = document.getElementById('account-dropdown');

      if (accountDropdownBtn && accountMenu && accountDropdown) {
        let hoverTimeout: NodeJS.Timeout;

        const showAccountMenu = () => {
          clearTimeout(hoverTimeout);
          accountMenu.style.display = 'block';
          accountDropdownBtn.setAttribute('aria-expanded', 'true');
        };

        const hideAccountMenu = () => {
          hoverTimeout = setTimeout(() => {
            accountMenu.style.display = 'none';
            accountDropdownBtn.setAttribute('aria-expanded', 'false');
          }, 300);
        };

        this.addEventListenerWithCleanup(accountDropdown, 'mouseenter', showAccountMenu);
        this.addEventListenerWithCleanup(accountDropdown, 'mouseleave', hideAccountMenu);

        // Close account menu when clicking outside
        this.addEventListenerWithCleanup(document, 'click', (e: Event) => {
          const target = e.target as Node;
          if (!accountDropdown.contains(target)) {
            accountMenu.style.display = 'none';
            accountDropdownBtn.setAttribute('aria-expanded', 'false');
          }
        });
      }
    }

    private setupSignoutHandlers(): void {
      const signoutBtn = document.getElementById('signout-btn');
      const mobileSignoutBtn = document.getElementById('mobile-signout-btn');

      const handleSignout = async (button: HTMLElement) => {
        try {
          // Show loading state
          const originalText = button.textContent;
          button.textContent = 'Signing out...';
          button.setAttribute('disabled', 'true');

          const result = await authManager.signOut();
          
          if (result.success) {
            console.log('‚úÖ Header: User signed out successfully');
            // Force immediate redirect
            window.location.href = '/';
          } else {
            // Force redirect anyway
            window.location.href = '/';
          }
        } catch (error) {
          console.error('‚ùå Header: Error signing out:', error);
          // Force redirect anyway
          window.location.href = '/';
        }
      };

      if (signoutBtn) {
        this.addEventListenerWithCleanup(signoutBtn, 'click', (e: Event) => {
          e.preventDefault();
          handleSignout(signoutBtn);
        });
      }

      if (mobileSignoutBtn) {
        this.addEventListenerWithCleanup(mobileSignoutBtn, 'click', (e: Event) => {
          e.preventDefault();
          handleSignout(mobileSignoutBtn);
        });
      }
    }

    private setupExistingEventListeners(): void {
      try {
        // Mobile menu toggle
        const mobileMenuButton = document.querySelector(".mobile-menu-button") as HTMLButtonElement;
        const mobileMenu = document.querySelector(".mobile-menu") as HTMLElement;

        if (mobileMenuButton && mobileMenu) {
          this.addEventListenerWithCleanup(mobileMenuButton, "click", () => {
            mobileMenu.classList.toggle("hidden");
            const isExpanded = !mobileMenu.classList.contains("hidden");
            mobileMenuButton.setAttribute("aria-expanded", isExpanded.toString());

            const icon = mobileMenuButton.querySelector("svg") as SVGElement;
            if (icon) {
              if (isExpanded) {
                icon.innerHTML = `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>`;
              } else {
                icon.innerHTML = `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>`;
              }
            }
          });
        }

        // Topics dropdown functionality
        const dropdownTrigger = document.querySelector(".dropdown-trigger") as HTMLButtonElement;
        const dropdownMenu = document.querySelector(".dropdown-menu-compact") as HTMLElement;
        const navDropdown = document.querySelector(".nav-dropdown") as HTMLElement;

        if (dropdownTrigger && dropdownMenu && navDropdown) {
          let hoverTimeout: NodeJS.Timeout;

          const showDropdown = () => {
            clearTimeout(hoverTimeout);
            dropdownMenu.style.display = "block";
            dropdownTrigger.setAttribute("aria-expanded", "true");
          };

          const hideDropdown = () => {
            hoverTimeout = setTimeout(() => {
              dropdownMenu.style.display = "none";
              dropdownTrigger.setAttribute("aria-expanded", "false");
            }, 300);
          };

          this.addEventListenerWithCleanup(navDropdown, "mouseenter", showDropdown);
          this.addEventListenerWithCleanup(navDropdown, "mouseleave", hideDropdown);
        }

        // Search functionality
        const searchToggle = document.querySelector(".search-toggle");
        if (searchToggle) {
          this.addEventListenerWithCleanup(searchToggle, "click", () => {
            window.location.href = "/search";
          });
        }

        // Add active state to current page navigation
        this.setActiveNavigation();

      } catch (error) {
        console.error("‚ùå Header: Error setting up existing event listeners:", error);
      }
    }

    private setActiveNavigation(): void {
      const currentPath = window.location.pathname;
      const navLinks = document.querySelectorAll(".nav-link, .mobile-nav-link");

      navLinks.forEach((link) => {
        const href = link.getAttribute("href");
        if (href && currentPath.startsWith(href) && href !== "/" && href !== "#") {
          link.classList.add("active");
        }
      });
    }

    // FIXED: Helper method to track event listeners for cleanup
    private addEventListenerWithCleanup(
      target: Element | Document, 
      event: string, 
      handler: EventListener
    ): void {
      target.addEventListener(event, handler);
      this.eventListeners.push({ target, event, handler });
    }

    private setupCleanup(): void {
      // Cleanup on page unload
      window.addEventListener("beforeunload", () => {
        this.cleanup();
      });

      // Cleanup on page hide (for mobile)
      window.addEventListener("pagehide", () => {
        this.cleanup();
      });
    }

    private cleanup(): void {
      try {
        // Unsubscribe from auth changes
        if (this.authUnsubscribe) {
          this.authUnsubscribe();
          this.authUnsubscribe = null;
        }

        // Clear notification interval
        if (this.notificationInterval) {
          clearInterval(this.notificationInterval);
          this.notificationInterval = null;
        }

        // Remove all event listeners
        this.eventListeners.forEach(({ target, event, handler }) => {
          target.removeEventListener(event, handler);
        });
        this.eventListeners = [];

        console.log("‚úÖ Header: Cleanup completed");
      } catch (error) {
        console.error("‚ùå Header: Error during cleanup:", error);
      }
    }

    // Public methods for external access
    public async refreshNotifications(): Promise<void> {
      await this.loadNotifications();
    }

    public async refreshNotificationCount(): Promise<void> {
      await this.loadNotificationCount();
    }
  }

  // Initialize header manager
  const headerManager = HeaderManager.getInstance();

  // Make it globally available for debugging and button access
  (window as any).headerManager = headerManager;

  // Initialize when DOM is ready
  document.addEventListener("DOMContentLoaded", () => {
    headerManager.initialize();
  });
</script>