  .account-dropdown-btn {
    background: none;
    border: none;
    cursor: pointer;
    color: #243788;
    padding: 0;
    display: flex;
    align-items: center;
    transition: color 0.3s ease;
  }

  :global(.dark) .account-dropdown-btn {
    color: #b4bce1;
  }

  .account-arrow {
    transition: transform 0.3s ease;
    flex-shrink: 0;
  }

  .account-dropdown:hover .account-arrow {
