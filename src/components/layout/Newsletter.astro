---
import NewsletterForm from "../forms/NewsletterForm.astro";
---

<section
  class="newsletter-section bg-gradient-to-r from-blue-600 to-purple-600 py-16"
>
  <div class="container mx-auto px-4">
    <div class="max-w-4xl mx-auto text-center">
      <h2 class="text-3xl lg:text-4xl font-bold text-white mb-4">
        Stay Updated with TinkByte
      </h2>
      <p class="text-xl text-blue-100 mb-8 max-w-2xl mx-auto">
        Get the latest insights on AI, product development, and technology
        trends delivered straight to your inbox.
      </p>

      <div class="max-w-md mx-auto">
        <NewsletterForm />
      </div>

      <p class="text-sm text-blue-200 mt-4">
        No spam, unsubscribe at any time. We respect your privacy.
      </p>
    </div>
  </div>
</section>

<style>
  .newsletter-section {
    position: relative;
    overflow: hidden;
  }

  .newsletter-section::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url("/images/pattern.svg") repeat;
    opacity: 0.1;
    pointer-events: none;
  }
</style>
