---
// src/components/comments/CommentForm.astro
import { COMMENT_CONFIG } from "../../lib/config/comments";

interface Props {
  articleId: string;
  parentId?: string;
  replyTo?: {
    id: string;
    author: string;
    content: string;
  };
  isInline?: boolean;
  placeholder?: string;
}

const {
  articleId,
  parentId,
  replyTo,
  isInline = false,
  placeholder = "Share your thoughts, use @ to mention users",
} = Astro.props;

const formId = isInline ? `inline-form-${parentId || "main"}` : "comment-form";
const textareaId = isInline
  ? `inline-textarea-${parentId || "main"}`
  : "comment-textarea";
---

<div class={isInline ? "inline-comment-form" : "comment-form-container"}>
  {
    replyTo && (
      <div class="reply-context" id="reply-context">
        <div class="reply-header">
          <svg
            width="16"
            height="16"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
          >
            <polyline points="9,17 4,12 9,7" />
            <path d="M20 18v-2a4 4 0 0 0-4-4H4" />
          </svg>
          <span>
            Replying to <strong>{replyTo.author}</strong>
          </span>
          <button
            type="button"
            class="cancel-reply-btn"
            data-action="cancel-reply"
          >
            Ã—
          </button>
        </div>
        <div class="reply-preview">
          {replyTo.content.substring(0, 100)}
          {replyTo.content.length > 100 ? "..." : ""}
        </div>
      </div>
    )
  }

  <form
    class="comment-form"
    id={formId}
    data-article-id={articleId}
    data-parent-id={parentId}
  >
    <!-- User Info Section -->
    <div class="user-info" id="user-info">
      <div class="user-avatar" id="user-avatar">
        <!-- Populated by JavaScript -->
      </div>
      <div class="user-details">
        <div class="user-name" id="user-name">Loading...</div>
      </div>
    </div>

    <!-- Content Input Section -->
    <div class="comment-input-section">
      <!-- Formatting Toolbar -->
      <div class="formatting-toolbar">
        <div class="format-buttons">
          <button
            type="button"
            class="format-btn"
            data-format="bold"
            title="Bold"
          >
            <strong>B</strong>
          </button>
          <button
            type="button"
            class="format-btn"
            data-format="italic"
            title="Italic"
          >
            <em>I</em>
          </button>
          <button
            type="button"
            class="format-btn"
            data-format="code"
            title="Code"
          >
            <code>&lt;/&gt;</code>
          </button>
          <button type="button" class="mention-btn" title="Mention User">
            <span>@</span>
          </button>
          <button type="button" class="emoji-btn" title="Add Emoji">
            <span>ğŸ˜Š</span>
          </button>
        </div>
        <div class="character-count">
          <span class="count" id={`character-count-${formId}`}>0</span>/{
            COMMENT_CONFIG.characterLimits.max
          }
        </div>
      </div>

      <!-- Emoji Picker -->
      <div class="emoji-picker" id={`emoji-picker-${formId}`}>
        <div class="emoji-categories">
          <button
            type="button"
            class="emoji-category active"
