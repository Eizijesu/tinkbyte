---
// src/components/tina/Quote.astro - TinkByte Brand Style
export interface Props {
  quote: string;
  author?: string;
  role?: string;
  avatar?: string;
  style?: 'default' | 'card' | 'minimal' | 'featured';
}

const { quote, author, role, avatar, style = 'default' } = Astro.props;
---

{style === 'featured' ? (
  <blockquote class="tinkbyte-quote quote-featured">
    <div class="quote-container">
      <!-- TinkByte quote mark -->
      <div class="quote-mark">
        <span>"</span>
      </div>
      
      <div class="quote-content">
        <p class="quote-text">
          "{quote}"
        </p>
        
        {(author || role) && (
          <footer class="quote-footer">
            {avatar && (
              <img 
                src={avatar} 
                alt={author || 'Quote author'} 
                class="quote-avatar"
              />
            )}
            <div class="quote-attribution">
              {author && (
                <cite class="quote-author">
                  {author}
                </cite>
              )}
              {role && (
                <span class="quote-role">{role}</span>
              )}
            </div>
          </footer>
        )}
      </div>
    </div>
  </blockquote>
) : style === 'card' ? (
  <blockquote class="tinkbyte-quote quote-card">
    <p class="quote-text">
      "{quote}"
    </p>
    
    {(author || role) && (
      <footer class="quote-footer">
        {avatar && (
          <img 
            src={avatar} 
            alt={author || 'Quote author'} 
            class="quote-avatar-small"
          />
        )}
        <div class="quote-attribution">
          {author && (
            <cite class="quote-author">
              {author}
            </cite>
          )}
          {role && (
            <span class="quote-role">{role}</span>
          )}
        </div>
      </footer>
    )}
  </blockquote>
) : style === 'minimal' ? (
  <blockquote class="tinkbyte-quote quote-minimal">
    <p class="quote-text">
      "{quote}"
    </p>
    
    {(author || role) && (
      <footer class="quote-footer-minimal">
        â€” {author}{role && `, ${role}`}
      </footer>
    )}
  </blockquote>
) : (
  <!-- Default style -->
  <blockquote class="tinkbyte-quote quote-default">
    <div class="quote-content-center">
      <p class="quote-text">
        "{quote}"
      </p>
      
      {(author || role) && (
        <footer class="quote-footer">
          {avatar && (
            <img 
              src={avatar} 
              alt={author || 'Quote author'} 
              class="quote-avatar"
            />
          )}
          <div class="quote-attribution">
            {author && (
              <cite class="quote-author">
                {author}
              </cite>
            )}
            {role && (
              <span class="quote-role">{role}</span>
            )}
          </div>
        </footer>
      )}
    </div>
  </blockquote>
)}

<style>
  /* TinkByte Quote Styles */
  .tinkbyte-quote {
    font-family: "Space Grotesk", sans-serif;
    margin: 2rem 0;
    border-radius: 0; /* Square corners */
  }

  /* Featured Quote */
  .quote-featured {
    position: relative;
  }

  .quote-featured .quote-container {
    background: linear-gradient(135deg, #243788 0%, #1e2f6b 100%);
    color: white;
    padding: 2rem;
    border: 2px solid #243788;
    position: relative;
  }

  .quote-mark {
    position: absolute;
    top: -1rem;
    left: -1rem;
    width: 2rem;
    height: 2rem;
    background: white;
    color: #243788;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    font-weight: 700;
    border: 2px solid #243788;
  }

  /* Card Quote */
  .quote-card {
    background: #f8fafc;
    border-left: 4px solid #243788;
    padding: 1.5rem;
    border-radius: 0;
  }

  :global(.dark) .quote-card {
    background: #1e293b;
    border-left-color: #b4bce1;
  }

  /* Minimal Quote */
  .quote-minimal {
    padding-left: 1.5rem;
    border-left: 3px solid #243788;
  }

  :global(.dark) .quote-minimal {
    border-left-color: #b4bce1;
  }

  /* Default Quote */
  .quote-default {
    text-align: center;
    padding: 1.5rem;
    background: #f8fafc;
    border: 2px solid #e2e8f0;
  }

  :global(.dark) .quote-default {
    background: #1e293b;
    border-color: #334155;
  }

  .quote-content-center {
    max-width: 48rem;
    margin: 0 auto;
  }

  /* Quote Text */
  .quote-text {
    font-size: 1.125rem;
    line-height: 1.7;
    font-style: italic;
    margin-bottom: 1rem;
    color: inherit;
  }

  .quote-featured .quote-text {
    color: white;
    font-size: 1.25rem;
    margin-bottom: 1.5rem;
  }

  .quote-default .quote-text {
    font-size: 1.5rem;
    color: #1e293b;
  }

  :global(.dark) .quote-default .quote-text {
    color: #e2e8f0;
  }

  .quote-card .quote-text,
  .quote-minimal .quote-text {
    color: #374151;
  }

  :global(.dark) .quote-card .quote-text,
  :global(.dark) .quote-minimal .quote-text {
    color: #e5e7eb;
  }

  /* Quote Footer */
  .quote-footer {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-top: 1rem;
  }

  .quote-footer-minimal {
    margin-top: 0.75rem;
    color: #6b7280;
    font-size: 0.875rem;
  }

  :global(.dark) .quote-footer-minimal {
    color: #9ca3af;
  }

  /* Avatar */
  .quote-avatar {
    width: 3rem;
    height: 3rem;
    border-radius: 0; /* Square corners */
    object-fit: cover;
    border: 2px solid white;
    flex-shrink: 0;
  }

  .quote-avatar-small {
    width: 2.5rem;
    height: 2.5rem;
    border-radius: 0; /* Square corners */
    object-fit: cover;
    flex-shrink: 0;
  }

  /* Attribution */
  .quote-attribution {
    display: flex;
    flex-direction: column;
  }

  .quote-author {
    font-weight: 600;
    font-style: normal;
    text-transform: uppercase;
    letter-spacing: 0.025em;
    font-size: 0.875rem;
  }

  .quote-featured .quote-author {
    color: white;
  }

  .quote-role {
    font-size: 0.75rem;
    opacity: 0.8;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .tinkbyte-quote {
      margin: 1.5rem 0;
    }

    .quote-featured .quote-container {
      padding: 1.5rem;
    }

    .quote-card {
      padding: 1rem;
    }

    .quote-text {
      font-size: 1rem;
    }

    .quote-default .quote-text {
      font-size: 1.25rem;
    }

    .quote-featured .quote-text {
      font-size: 1.125rem;
    }
  }
</style>