---
export interface Props {
  src: string;
  alt: string;
  caption?: string;
  layout: "full-width" | "centered" | "float-left" | "float-right";
}

const { src, alt, caption, layout } = Astro.props;

const layoutClasses = {
  "full-width": "w-full my-8",
  centered: "max-w-2xl mx-auto my-8",
  "float-left": "float-left mr-6 mb-4 max-w-sm",
  "float-right": "float-right ml-6 mb-4 max-w-sm",
};
---

<figure class={layoutClasses[layout]}>
  <img src={src} alt={alt} class="rounded-lg shadow-lg w-full" />
  {
    caption && (
      <figcaption class="text-sm text-gray-600 mt-2 text-center">
        {caption}
      </figcaption>
    )
  }
</figure>
