---
export interface Props {
  title: string;
  subtitle?: string;
  backgroundImage?: string;
  cta?: {
    text: string;
    url: string;
  };
}

const { title, subtitle, backgroundImage, cta } = Astro.props;
---

<section
  class="hero relative py-20 px-4"
  style={backgroundImage ? `background-image: url(${backgroundImage})` : ""}
>
  <div class="absolute inset-0 bg-black bg-opacity-40"></div>
  <div class="relative z-10 max-w-4xl mx-auto text-center text-white">
    <h1 class="text-5xl font-bold mb-4">{title}</h1>
    {subtitle && <p class="text-xl mb-8">{subtitle}</p>}
    {
      cta && (
        <a
          href={cta.url}
          class="inline-block bg-blue-600 hover:bg-blue-700 px-8 py-3 rounded-lg font-semibold transition-colors"
        >
          {cta.text}
        </a>
      )
    }
  </div>
</section>
