---
// src/pages/auth/admin-reset-password.astro
export const prerender = true;

import Layout from "../../layouts/Layout.astro";
---

<Layout title="Admin Password Reset | TinkByte">
  <div class="auth-layout">
    <div class="auth-container">
      <div class="auth-brand">
        <a href="/" class="brand-link">
          <div class="brand-text">
            <span class="brand-name">TinkByte</span>
            <span class="brand-tagline">Admin Password Reset</span>
          </div>
        </a>
      </div>

      <div class="auth-card">
        <div class="auth-header">
          <h1 class="auth-title">Reset Admin Password</h1>
          <p class="auth-description">Update your admin password</p>
        </div>

        <form id="admin-reset-form" class="auth-form">
          <div class="form-group">
            <label for="current-password" class="form-label"
              >Current Password</label
            >
            <div class="password-input">
              <input
                type="password"
                id="current-password"
                class="form-input"
                placeholder="Enter current password"
                required
              />
              <button
                type="button"
                class="password-toggle"
                id="current-password-toggle"
              >
                <svg
                  width="16"
                  height="16"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                  <circle cx="12" cy="12" r="3"></circle>
                </svg>
              </button>
            </div>
          </div>

          <div class="form-group">
            <label for="new-password" class="form-label">New Password</label>
            <div class="password-input">
              <input
                type="password"
                id="new-password"
                class="form-input"
                placeholder="Enter new password"
                required
                minlength="8"
              />
              <button
                type="button"
                class="password-toggle"
                id="new-password-toggle"
              >
                <svg
                  width="16"
                  height="16"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                  <circle cx="12" cy="12" r="3"></circle>
                </svg>
              </button>
            </div>
          </div>

          <div class="form-group">
            <label for="confirm-password" class="form-label"
              >Confirm New Password</label
            >
            <div class="password-input">
              <input
                type="password"
                id="confirm-password"
                class="form-input"
                placeholder="Confirm new password"
                required
                minlength="8"
              />
              <button
                type="button"
                class="password-toggle"
                id="confirm-password-toggle"
              >
                <svg
                  width="16"
                  height="16"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                  <circle cx="12" cy="12" r="3"></circle>
                </svg>
              </button>
            </div>
          </div>

          <button type="submit" class="auth-btn primary" id="reset-btn">
            <span class="btn-text">Update Password</span>
            <div class="btn-spinner" style="display: none;">
              <svg
                width="16"
                height="16"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
              >
                <line x1="12" y1="2" x2="12" y2="6"></line>
                <line x1="12" y1="18" x2="12" y2="22"></line>
                <line x1="4.93" y1="4.93" x2="7.76" y2="7.76"></line>
                <line x1="16.24" y1="16.24" x2="19.07" y2="19.07"></line>
                <line x1="2" y1="12" x2="6" y2="12"></line>
                <line x1="18" y1="12" x2="22" y2="12"></line>
                <line x1="4.93" y1="19.07" x2="7.76" y2="16.24"></line>
                <line x1="16.24" y1="7.76" x2="19.07" y2="4.93"></line>
              </svg>
            </div>
          </button>

          <div class="auth-footer-links">
            <a href="/auth/forgot-password" class="auth-link"
              >Forgot password?</a
            >
            <a href="/auth/signin" class="auth-link">‚Üê Back to sign in</a>
          </div>
        </form>

        <!-- Square Glassy Error Display -->
        <div class="glass-error" id="glass-error" style="display: none;">
          <div class="error-content">
            <div class="error-icon">
              <svg
                width="20"
                height="20"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
              >
                <circle cx="12" cy="12" r="10"></circle>
                <line x1="15" y1="9" x2="9" y2="15"></line>
                <line x1="9" y1="9" x2="15" y2="15"></line>
              </svg>
            </div>
            <div class="error-message">
              <h4>Password Update Error</h4>
              <p id="error-text">Something went wrong</p>
            </div>
            <button class="error-close" id="error-close">
              <svg
                width="16"
                height="16"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
              >
                <line x1="18" y1="6" x2="6" y2="18"></line>
                <line x1="6" y1="6" x2="18" y2="18"></line>
              </svg>
            </button>
          </div>
        </div>

        <!-- Success Display -->
        <div class="glass-success" id="glass-success" style="display: none;">
          <div class="success-content">
            <div class="success-icon">
              <svg
                width="20"
                height="20"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
              >
                <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                <polyline points="22,4 12,14.01 9,11.01"></polyline>
              </svg>
            </div>
            <div class="success-message">
              <h4>Password Updated!</h4>
              <p id="success-text">
                Your password has been updated successfully
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>

<script>
  import { adminAuthManager } from "../../lib/admin/auth.js";
  import { supabase } from "../../lib/supabase.js";

  class AdminPasswordResetManager {
    private initialized: boolean = false;
    private form: HTMLFormElement | null = null;
    private currentPasswordInput: HTMLInputElement | null = null;
    private newPasswordInput: HTMLInputElement | null = null;
    private confirmPasswordInput: HTMLInputElement | null = null;
    private submitBtn: HTMLButtonElement | null = null;
    private btnText: HTMLElement | null = null;
    private btnSpinner: HTMLElement | null = null;
    private glassError: HTMLElement | null = null;
    private errorText: HTMLElement | null = null;
    private errorClose: HTMLButtonElement | null = null;
    private glassSuccess: HTMLElement | null = null;
    private successText: HTMLElement | null = null;

    constructor() {
      this.init();
    }

    async init() {
      if (this.initialized) return;

      try {
        console.log("üîÑ AdminPasswordReset: Initializing...");

        // Initialize admin auth manager
        await adminAuthManager.initialize();

        this.setupDOM();
        await this.checkAuthentication();
        this.setupEventListeners();

        this.initialized = true;
        console.log("‚úÖ AdminPasswordReset: Initialized successfully");
      } catch (error) {
        console.error("‚ùå AdminPasswordReset: Initialization failed:", error);
        this.showGlassError("Failed to initialize password reset form");
      }
    }

    private setupDOM() {
      this.form = document.getElementById(
        "admin-reset-form"
      ) as HTMLFormElement;
      this.currentPasswordInput = document.getElementById(
        "current-password"
      ) as HTMLInputElement;
      this.newPasswordInput = document.getElementById(
        "new-password"
      ) as HTMLInputElement;
      this.confirmPasswordInput = document.getElementById(
        "confirm-password"
      ) as HTMLInputElement;
      this.submitBtn = document.getElementById(
        "reset-btn"
      ) as HTMLButtonElement;
      this.btnText = this.submitBtn?.querySelector(".btn-text") as HTMLElement;
      this.btnSpinner = this.submitBtn?.querySelector(
        ".btn-spinner"
      ) as HTMLElement;
      this.glassError = document.getElementById("glass-error") as HTMLElement;
      this.errorText = document.getElementById("error-text") as HTMLElement;
      this.errorClose = document.getElementById(
        "error-close"
      ) as HTMLButtonElement;
      this.glassSuccess = document.getElementById(
        "glass-success"
      ) as HTMLElement;
      this.successText = document.getElementById("success-text") as HTMLElement;

      // Setup password toggles
      this.setupPasswordToggles();
    }

    private async checkAuthentication() {
      try {
        const currentUser = await adminAuthManager.getCurrentUser();
        if (!currentUser) {
          this.showGlassError("Please sign in first to change your password");
          setTimeout(() => {
            window.location.href =
              "/auth/admin-signin?redirect=" +
              encodeURIComponent(window.location.pathname);
          }, 2000);
          throw new Error("Not authenticated");
        }
        console.log(
          "‚úÖ AdminPasswordReset: User authenticated:",
          currentUser.email
        );
      } catch (error) {
        console.error(
          "‚ùå AdminPasswordReset: Authentication check failed:",
          error
        );
        throw error;
      }
    }

    private setupPasswordToggles() {
      const toggles = [
        { btn: "current-password-toggle", input: "current-password" },
        { btn: "new-password-toggle", input: "new-password" },
        { btn: "confirm-password-toggle", input: "confirm-password" },
      ];

      toggles.forEach(({ btn, input }) => {
        const toggleBtn = document.getElementById(btn) as HTMLButtonElement;
        const passwordInput = document.getElementById(
          input
        ) as HTMLInputElement;
        this.setupPasswordToggle(toggleBtn, passwordInput);
      });
    }

    private setupPasswordToggle(
      toggleBtn: HTMLButtonElement,
      passwordInput: HTMLInputElement
    ) {
      if (!toggleBtn || !passwordInput) return;

      toggleBtn.addEventListener("click", () => {
        const type = passwordInput.type === "password" ? "text" : "password";
        passwordInput.type = type;

        toggleBtn.innerHTML =
          type === "text"
            ? `<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M17.94 17.94A10.07 10.07 0 0 1 12 20c-7 0-11-8-11-8a18.45 18.45 0 0 1 5.06-5.94M9.9 4.24A9.12 9.12 0 0 1 12 4c7 0 11 8 11 8a18.5 18.5 0 0 1-2.16 3.19m-6.72-1.07a3 3 0 1 1-4.24-4.24"/><line x1="1" y1="1" x2="23" y2="23"/></svg>`
            : `<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/><circle cx="12" cy="12" r="3"/></svg>`;
      });
    }

    private setupEventListeners() {
      this.errorClose?.addEventListener("click", () => this.hideMessages());

      this.form?.addEventListener("submit", async (e) => {
        e.preventDefault();
        await this.handlePasswordReset();
      });
    }

    private async handlePasswordReset() {
      if (
        !this.currentPasswordInput ||
        !this.newPasswordInput ||
        !this.confirmPasswordInput
      )
        return;

      this.hideMessages();

      const currentPassword = this.currentPasswordInput.value.trim();
      const newPassword = this.newPasswordInput.value.trim();
      const confirmPassword = this.confirmPasswordInput.value.trim();

      // Validation
      if (!currentPassword) {
        this.showGlassError("Please enter your current password");
        return;
      }

      if (newPassword.length < 8) {
        this.showGlassError("New password must be at least 8 characters long");
        return;
      }

      if (newPassword !== confirmPassword) {
        this.showGlassError("New passwords do not match");
        return;
      }

      if (currentPassword === newPassword) {
        this.showGlassError(
          "New password must be different from current password"
        );
        return;
      }

      // Show loading
      this.setLoadingState(true);

      try {
        console.log("üîÑ AdminPasswordReset: Attempting password update");

        // First verify current password by attempting to sign in
        const currentUser = await adminAuthManager.getCurrentUser();
        if (!currentUser?.email) {
          throw new Error("Unable to verify current user");
        }

        // Test current password
        const { error: testError } = await supabase.auth.signInWithPassword({
          email: currentUser.email,
          password: currentPassword,
        });

        if (testError) {
          throw new Error("Current password is incorrect");
        }

        // Update password using Supabase
        const { error: updateError } = await supabase.auth.updateUser({
          password: newPassword,
        });

        if (updateError) {
          throw updateError;
        }

        console.log("‚úÖ AdminPasswordReset: Password updated successfully");

        this.showGlassSuccess("Password updated successfully!");

        // Clear form
        this.clearForm();

        // Redirect after delay
        setTimeout(() => {
          window.location.href = "/admin/dashboard";
        }, 2000);
      } catch (error: any) {
        console.error("‚ùå AdminPasswordReset: Password update error", error);

        let errorMessage = "Failed to update password";

        if (
          error.message.includes("Invalid login credentials") ||
          error.message.includes("Current password is incorrect")
        ) {
          errorMessage = "Current password is incorrect";
        } else if (error.message.includes("Password should be")) {
          errorMessage = "New password does not meet requirements";
        } else if (error.message) {
          errorMessage = error.message;
        }

        this.showGlassError(errorMessage);
      } finally {
        this.setLoadingState(false);
      }
    }

    private clearForm() {
      if (this.currentPasswordInput) this.currentPasswordInput.value = "";
      if (this.newPasswordInput) this.newPasswordInput.value = "";
      if (this.confirmPasswordInput) this.confirmPasswordInput.value = "";
    }

    private setLoadingState(isLoading: boolean) {
      if (!this.submitBtn || !this.btnText || !this.btnSpinner) return;

      this.submitBtn.disabled = isLoading;
      this.btnText.style.display = isLoading ? "none" : "block";
      this.btnSpinner.style.display = isLoading ? "block" : "none";
    }

    private showGlassError(message: string) {
      if (this.errorText && this.glassError) {
        this.errorText.textContent = message;
        this.glassError.style.display = "block";
        if (this.glassSuccess) this.glassSuccess.style.display = "none";

        setTimeout(() => {
          if (this.glassError) {
            this.glassError.style.transform = "translateY(0)";
            this.glassError.style.opacity = "1";
          }
        }, 10);
      }
    }

    private showGlassSuccess(message: string) {
      if (this.successText && this.glassSuccess) {
        this.successText.textContent = message;
        this.glassSuccess.style.display = "block";
        if (this.glassError) this.glassError.style.display = "none";

        setTimeout(() => {
          if (this.glassSuccess) {
            this.glassSuccess.style.transform = "translateY(0)";
            this.glassSuccess.style.opacity = "1";
          }
        }, 10);
      }
    }

    private hideMessages() {
      if (this.glassError) {
        this.glassError.style.transform = "translateY(-20px)";
        this.glassError.style.opacity = "0";
        setTimeout(() => {
          if (this.glassError) this.glassError.style.display = "none";
        }, 300);
      }
      if (this.glassSuccess) {
        this.glassSuccess.style.transform = "translateY(-20px)";
        this.glassSuccess.style.opacity = "0";
        setTimeout(() => {
          if (this.glassSuccess) this.glassSuccess.style.display = "none";
        }, 300);
      }
    }
  }

  // Initialize when DOM is ready
  document.addEventListener("DOMContentLoaded", () => {
    new AdminPasswordResetManager();
  });
</script>

