---
// src/pages/blog/categories/index.astro - Categories listing page
import Layout from "../../../layouts/Layout.astro";
import Button from "../../../components/ui/Button.astro";
import { getAllCategories, getAllPosts } from "../../../utils/content";
import { formatDate, slugify } from "../../../utils/helpers";
import type { CollectionEntry } from "astro:content";

// Get all posts and categories using our utility functions
const allPosts = await getAllPosts();
const categoriesWithStats = await getAllCategories();

// Get categories collection data for enhanced information
let categoriesData: CollectionEntry<'categories'>[] = [];
try {
  const { getCollection } = await import("astro:content");
  categoriesData = await getCollection("categories");
} catch (error) {
  console.warn("Categories collection not found, using dynamic categories");
}

// Enhanced category data with TinaCMS integration
const enhancedCategories = categoriesWithStats.map((category) => {
  // Find matching category data from TinaCMS
  const categoryData = categoriesData.find(
    cat => cat.data.name.toLowerCase() === category.name.toLowerCase()
  );

  // Get posts for this category
  const categoryPosts = allPosts.filter(
    (post) => post.data.category?.toLowerCase() === category.name.toLowerCase()
  );

  // Dynamic color assignment for categories without TinaCMS data
  const getDynamicColor = (name: string): string => {
    const colorMap: Record<string, string> = {
      "AI Evolution": "purple",
      "Product Strategy": "green", 
      "Tech Culture": "blue",
      "Startup Lessons": "orange",
      "Developer Tools": "cyan",
      "Industry Analysis": "red",
      "Emerging Tech": "pink",
      "Future Tech": "violet",
      "Web Development": "blue",
      "Mobile Development": "cyan",
      "Data Science": "purple",
      "DevOps": "green",
      "Security": "red",
      "Design": "pink"
    };
    return colorMap[name] || "blue";
  };

  // Get latest post for this category
  const latestPost = categoryPosts
    .sort((a, b) => new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime())[0];

  return {
    slug: categoryData?.slug || slugify(category.name),
    data: {
      name: category.name,
      description: categoryData?.data.description || 
        `Explore articles about ${category.name} and related topics. Stay updated with the latest trends, insights, and best practices.`,
      color: categoryData?.data.color || getDynamicColor(category.name),
      icon: categoryData?.data.icon || "tag",
      featured: categoryData?.data.featured || false,
    },
    postCount: category.count,
    featuredCount: categoryPosts.filter(post => post.data.featured).length,
    latestPost: latestPost || null,
    lastUpdated: latestPost ? latestPost.data.pubDate : null
  };
}).sort((a, b) => {
  // Sort featured categories first, then by post count
  if (a.data.featured !== b.data.featured) {
    return b.data.featured ? 1 : -1;
  }
  return b.postCount - a.postCount;
});

// Calculate totals
const totalArticles = allPosts.length;
const totalCategories = enhancedCategories.length;
const featuredCategories = enhancedCategories.filter(cat => cat.data.featured);

// SEO and meta information
const pageTitle = "Categories | TinkByte Blog";
const pageDescription = `Explore ${totalCategories} categories with ${totalArticles} articles - from AI Evolution to Product Strategy, discover content that matches your interests.`;
---

<Layout
  title={pageTitle}
  description={pageDescription}
>
  <!-- Categories Hero -->
  <section class="py-16 px-4 sm:px-6 bg-gradient-to-br from-zinc-50 to-white dark:from-zinc-900 dark:to-zinc-800">
    <div class="max-w-6xl mx-auto text-center">
      <div class="inline-flex items-center gap-2 px-4 py-2 bg-zinc-100 dark:bg-zinc-800 rounded-sm border border-zinc-200 dark:border-zinc-700 mb-6">
        <div class="w-3 h-3 rounded-sm bg-gradient-to-r from-purple-500 to-blue-500 animate-pulse"></div>
        <span class="text-sm font-bold uppercase tracking-wider text-zinc-700 dark:text-zinc-300">
          EXPLORE BY TOPIC
        </span>
      </div>

      <h1 class="text-4xl lg:text-6xl font-bold text-zinc-900 dark:text-zinc-100 mb-6 font-space-grotesk uppercase tracking-wide">
        CATEGORIES
      </h1>

      <p class="text-xl text-zinc-600 dark:text-zinc-400 leading-relaxed max-w-3xl mx-auto mb-8">
        Dive deep into the topics that matter most in tech. From cutting-edge AI developments to strategic product insights, 
        find the content that fuels your curiosity and drives your success.
      </p>

      <div class="flex justify-center gap-8 text-center">
        <div>
          <div class="text-3xl font-bold text-zinc-900 dark:text-zinc-100">
            {totalCategories}
          </div>
          <div class="text-sm text-zinc-500 dark:text-zinc-400 uppercase tracking-wider">
            CATEGORIES
          </div>
        </div>
        <div>
          <div class="text-3xl font-bold text-zinc-900 dark:text-zinc-100">
            {totalArticles}
          </div>
          <div class="text-sm text-zinc-500 dark:text-zinc-400 uppercase tracking-wider">
            TOTAL ARTICLES
          </div>
        </div>
        {featuredCategories.length > 0 && (
          <div>
            <div class="text-3xl font-bold text-zinc-900 dark:text-zinc-100">
              {featuredCategories.length}
            </div>
            <div class="text-sm text-zinc-500 dark:text-zinc-400 uppercase tracking-wider">
              FEATURED
            </div>
          </div>
        )}
      </div>
    </div>
  </section>

  <!-- Featured Categories (if any) -->
  {featuredCategories.length > 0 && (
    <section class="py-12 px-4 sm:px-6 bg-zinc-50 dark:bg-zinc-800/30">
      <div class="max-w-6xl mx-auto">
        <h2 class="text-2xl font-bold text-zinc-900 dark:text-zinc-100 mb-8 font-space-grotesk uppercase tracking-wide text-center">
          FEATURED CATEGORIES
        </h2>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          {featuredCategories.slice(0, 3).map((category) => (
            <div class="bg-white dark:bg-zinc-800 rounded-sm border border-zinc-200 dark:border-zinc-700 p-6 hover:shadow-lg transition-all duration-300">
              <div class="flex items-center gap-3 mb-3">
                <div class={`w-3 h-3 rounded-sm ${
                  category.data.color === "purple" ? "bg-purple-500" :
                  category.data.color === "green" ? "bg-green-500" :
                  category.data.color === "blue" ? "bg-blue-500" :
                  category.data.color === "cyan" ? "bg-cyan-500" :
                  category.data.color === "orange" ? "bg-orange-500" :
                  category.data.color === "red" ? "bg-red-500" :
                  category.data.color === "pink" ? "bg-pink-500" :
                  category.data.color === "yellow" ? "bg-yellow-500" :
                  category.data.color === "violet" ? "bg-violet-500" :
                  "bg-zinc-500"
                }`}></div>
                <span class="text-xs font-bold uppercase tracking-wider text-yellow-600 dark:text-yellow-400">
                  FEATURED
                </span>
              </div>
              <h3 class="text-lg font-bold text-zinc-900 dark:text-zinc-100 mb-2 uppercase tracking-wide">
                <a href={`/blog/categories/${category.slug}`} class="hover:underline">
                  {category.data.name}
                </a>
              </h3>
              <p class="text-sm text-zinc-600 dark:text-zinc-400 mb-3">
                {category.data.description.slice(0, 100)}...
              </p>
              <div class="flex justify-between text-xs text-zinc-500 dark:text-zinc-400">
                <span>{category.postCount} articles</span>
                {category.lastUpdated && (
                  <span>Updated {formatDate(category.lastUpdated, { month: 'short', day: 'numeric' })}</span>
                )}
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- All Categories Grid -->
  <section class="py-16 px-4 sm:px-6">
    <div class="max-w-6xl mx-auto">
      <div class="flex items-center justify-between mb-12">
        <div>
          <h2 class="text-3xl font-bold text-zinc-900 dark:text-zinc-100 mb-4 font-space-grotesk uppercase tracking-wide">
            ALL CATEGORIES
          </h2>
          <p class="text-lg text-zinc-600 dark:text-zinc-400">
            Choose your area of interest and explore curated content
          </p>
        </div>
        <Button
          variant="outline"
          href="/blog"
          className="group uppercase tracking-wide"
        >
          <span class="flex items-center gap-1">
            ALL ARTICLES
            <i class="fas fa-arrow-right text-sm transition-transform duration-300 group-hover:translate-x-1"></i>
          </span>
        </Button>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {enhancedCategories.map((category) => (
          <article class="group bg-white dark:bg-zinc-800 rounded-sm border border-zinc-200 dark:border-zinc-700 overflow-hidden hover:shadow-xl hover:border-zinc-300 dark:hover:border-zinc-600 transition-all duration-300">
            <div class="p-8">
              <!-- Category Header -->
              <div class="mb-6">
                <div class="flex items-center gap-3 mb-4">
                  <div class={`w-4 h-4 rounded-sm ${
                    category.data.color === "purple" ? "bg-purple-500" :
                    category.data.color === "green" ? "bg-green-500" :
                    category.data.color === "blue" ? "bg-blue-500" :
                    category.data.color === "cyan" ? "bg-cyan-500" :
                    category.data.color === "orange" ? "bg-orange-500" :
                    category.data.color === "red" ? "bg-red-500" :
                    category.data.color === "pink" ? "bg-pink-500" :
                    category.data.color === "yellow" ? "bg-yellow-500" :
                    category.data.color === "violet" ? "bg-violet-500" :
                    "bg-zinc-500"
                  } animate-pulse`}></div>
                  <span class="text-xs font-bold uppercase tracking-wider text-zinc-500 dark:text-zinc-400">
                    CATEGORY
                  </span>
                  {category.data.featured && (
                    <span class="text-xs font-bold uppercase tracking-wider text-yellow-600 dark:text-yellow-400 bg-yellow-100 dark:bg-yellow-900/30 px-2 py-1 rounded">
                      FEATURED
                    </span>
                  )}
                </div>

                <h3 class="text-xl font-bold text-zinc-900 dark:text-zinc-100 mb-3 group-hover:text-zinc-700 dark:group-hover:text-zinc-300 transition-colors uppercase tracking-wide">
                  <a href={`/blog/categories/${category.slug}`} class="hover:underline">
                    {category.data.name}
                  </a>
                </h3>

                <p class="text-sm text-zinc-600 dark:text-zinc-400 leading-relaxed mb-6">
                  {category.data.description}
                </p>
              </div>

              <!-- Category Stats -->
              <div class="grid grid-cols-2 gap-4 mb-6">
                <div class="text-center p-3 bg-zinc-50 dark:bg-zinc-700/50 rounded-sm">
                  <div class="text-2xl font-bold text-zinc-900 dark:text-zinc-100">
                    {category.postCount}
                  </div>
                  <div class="text-xs text-zinc-500 dark:text-zinc-400 uppercase tracking-wider">
                    ARTICLES
                  </div>
                </div>
                <div class="text-center p-3 bg-zinc-50 dark:bg-zinc-700/50 rounded-sm">
                  <div class="text-2xl font-bold text-zinc-900 dark:text-zinc-100">
                    {category.featuredCount}
                  </div>
                  <div class="text-xs text-zinc-500 dark:text-zinc-400 uppercase tracking-wider">
                    FEATURED
                  </div>
                </div>
              </div>

              <!-- Latest Article -->
              {category.latestPost && (
                <div class="mb-6 p-3 bg-zinc-50 dark:bg-zinc-700/30 rounded-sm border border-zinc-100 dark:border-zinc-600">
                  <div class="text-xs text-zinc-500 dark:text-zinc-400 uppercase tracking-wider mb-1">
                    LATEST ARTICLE
                  </div>
                  <a 
                    href={`/blog/${category.latestPost.slug}`}
                    class="text-sm font-medium text-zinc-900 dark:text-zinc-100 hover:text-zinc-700 dark:hover:text-zinc-300 transition-colors line-clamp-2"
                  >
                    {category.latestPost.data.title}
                  </a>
                  <div class="text-xs text-zinc-500 dark:text-zinc-400 mt-1">
                    {formatDate(category.latestPost.data.pubDate)}
                  </div>
                </div>
              )}

              <!-- Action Button -->
              <Button
                variant="outline"
                href={`/blog/categories/${category.slug}`}
                className="w-full group uppercase tracking-wide text-sm"
              >
                <span class="flex items-center justify-center gap-2">
                  EXPLORE {category.data.name.toUpperCase()}
                  <i class="fas fa-arrow-right text-xs transition-transform duration-300 group-hover:translate-x-1"></i>
                </span>
              </Button>
            </div>
          </article>
        ))}
      </div>

      <!-- Empty State -->
      {enhancedCategories.length === 0 && (
        <div class="text-center py-16">
          <i class="fas fa-tags text-6xl text-zinc-300 dark:text-zinc-600 mb-4"></i>
          <h3 class="text-2xl font-bold text-zinc-900 dark:text-zinc-100 mb-4 uppercase tracking-wide">
            NO CATEGORIES YET
          </h3>
          <p class="text-zinc-600 dark:text-zinc-400 mb-8">
            Categories will appear here once you start publishing content.
          </p>
          <Button
            href="/blog"
            variant="primary"
            className="uppercase tracking-wide"
          >
            BROWSE ALL ARTICLES
          </Button>
        </div>
      )}
    </div>
  </section>

  <!-- Call to Action -->
  <section class="py-16 px-4 sm:px-6 bg-zinc-50 dark:bg-zinc-800/50">
    <div class="max-w-4xl mx-auto text-center">
      <h2 class="text-3xl font-bold text-zinc-900 dark:text-zinc-100 mb-4 font-space-grotesk uppercase tracking-wide">
        STAY UPDATED
      </h2>
      <p class="text-lg text-zinc-600 dark:text-zinc-400 mb-8">
        Get the latest insights delivered directly to your inbox. Join our community of forward-thinking professionals.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <Button
          variant="primary"
          href="/newsletter"
          className="uppercase tracking-wide"
        >
          SUBSCRIBE TO NEWSLETTER
        </Button>
        <Button
          variant="outline"
          href="/rss.xml"
          className="uppercase tracking-wide"
        >
          RSS FEED
        </Button>
      </div>
    </div>
  </section>
</Layout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>