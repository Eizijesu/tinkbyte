---
// src/pages/blog/[slug].astro
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import BlogPost from "../../layouts/BlogPost.astro";

// Generate static paths for all blog posts
export async function getStaticPaths() {
  // For now, we'll use static data. Later you can replace this with TinaCMS or Astro content collections
  const blogPosts = [
    {
      slug: "ai-evolution-beyond-hype",
      title: "AI Evolution: Beyond the Hype Cycle",
      description:
        "Real-world applications and practical insights into AI implementation. What actually works when you strip away the marketing buzz and focus on delivering value.",
      date: "2024-01-25",
      readTime: "8 min read",
      tags: ["ai-evolution", "product-insights"],
      author: {
        name: "Dr. Elena Vasquez",
        bio: "AI researcher turned product strategist with 12+ years in machine learning",
        avatar:
          "https://images.unsplash.com/photo-1580489944761-15a19d654956?w=100&h=100&fit=crop&crop=face",
        role: "Chief AI Officer",
      },
      audioUrl: "/audio/ai-evolution-beyond-hype.mp3",
      audioDuration: "15:30",
      image:
        "https://images.unsplash.com/photo-1677442136019-21780ecad995?w=1200&h=800&fit=crop&crop=edges",
    },
    {
      slug: "building-products-scale-globally",
      title: "Building Products That Scale Globally",
      description:
        "Lessons from the trenches of product development. How constraint-driven innovation creates solutions that work everywhere, from Silicon Valley to emerging markets.",
      date: "2024-01-22",
      readTime: "12 min read",
      tags: ["product-strategy", "scaling", "global-markets"],
      author: {
        name: "Alex Chen",
        bio: "Product strategist with 10+ years building scalable solutions",
        avatar:
          "https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?w=100&h=100&fit=crop&crop=face",
        role: "Senior Product Manager",
      },
      audioUrl: "/audio/building-products-scale.mp3",
      audioDuration: "22:15",
      image:
        "https://images.unsplash.com/photo-1460925895917-afdab827c52f?w=1200&h=800&fit=crop&crop=edges",
    },
    {
      slug: "human-side-tech-culture",
      title: "The Human Side of Tech Culture",
      description:
        "Community stories and ethical design discussions. Why culture matters more than code in successful product development and sustainable tech teams.",
      date: "2024-01-20",
      readTime: "6 min read",
      tags: ["culture", "ethics", "team-building"],
      author: {
        name: "Sarah Kim",
        bio: "Tech culture researcher and community builder",
        avatar:
          "https://images.unsplash.com/photo-1494790108755-2616b612b47c?w=100&h=100&fit=crop&crop=face",
        role: "Culture Analyst",
      },
      image:
        "https://images.unsplash.com/photo-1522071820081-009f0129c71c?w=1200&h=800&fit=crop&crop=edges",
    },
    {
      slug: "decentralized-future",
      title: "The Decentralized Future is Here",
      description:
        "Breaking down complex distributed systems into accessible frameworks. Understanding blockchain, Web3, and decentralized technologies beyond the speculation.",
      date: "2024-01-18",
      readTime: "9 min read",
      tags: ["blockchain", "web3", "distributed-systems"],
      author: {
        name: "Marcus Rodriguez",
        bio: "Blockchain researcher and distributed systems expert",
        avatar:
          "https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?w=100&h=100&fit=crop&crop=face",
        role: "Tech Lead",
      },
      image:
        "https://images.unsplash.com/photo-1596524430615-b46475ddff4e?w=1200&h=800&fit=crop&crop=edges",
    },
    {
      slug: "quantum-computing-reality-check",
      title: "Quantum Computing: Reality Check",
      description:
        "A practical look at where quantum computing stands today, what problems it can actually solve, and why most quantum hype misses the mark.",
      date: "2024-01-15",
      readTime: "7 min read",
      tags: ["quantum", "research", "future-tech"],
      author: {
        name: "Dr. James Liu",
        bio: "Quantum physicist and technology researcher",
        avatar:
          "https://images.unsplash.com/photo-1560250097-0b93528c311a?w=100&h=100&fit=crop&crop=face",
        role: "Research Director",
      },
      image:
        "https://images.unsplash.com/photo-1635070041078-e363dbe005cb?w=1200&h=800&fit=crop&crop=edges",
    },
    {
      slug: "low-code-enterprise-revolution",
      title: "Low-Code Enterprise Revolution",
      description:
        "How low-code platforms are evolving to solve real enterprise challenges without sacrificing quality, security, or developer happiness.",
      date: "2024-01-12",
      readTime: "5 min read",
      tags: ["low-code", "enterprise", "development"],
      author: {
        name: "Rachel Torres",
        bio: "Enterprise software architect and low-code evangelist",
        avatar:
          "https://images.unsplash.com/photo-1573496359142-b8d87734a5a2?w=100&h=100&fit=crop&crop=face",
