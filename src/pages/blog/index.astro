---
// src/pages/blog/index.astro - Fixed import path
import Layout from "../../layouts/Layout.astro";
import Button from "../../components/ui/Button.astro";
import ArticleCard from "../../components/blog/ArticleCard.astro";
import { getCollection } from "astro:content";
import { SITE } from "../../config/site";

// Get all published blog posts
const allPosts = await getCollection("blog", ({ data }) => !data.draft);
const sortedPosts = allPosts.sort(
  (a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime()
);

// Pagination setup
const POSTS_PER_PAGE = 12;
const currentPage = 1;
const totalPages = Math.ceil(sortedPosts.length / POSTS_PER_PAGE);
const paginatedPosts = sortedPosts.slice(0, POSTS_PER_PAGE);

// Featured and trending posts
const featuredPosts = allPosts.filter((post) => post.data.featured).slice(0, 3);
const trendingPosts = allPosts.filter((post) => post.data.trending).slice(0, 3);

// Categories with post counts
const categories = [
  ...new Set(allPosts.map((post) => post.data.category)),
].filter(Boolean);
const categoryStats = categories
  .map((category) => ({
    name: category,
    count: allPosts.filter((post) => post.data.category === category).length,
    slug: category
      .toLowerCase()
      .replace(/\s+/g, "-")
      .replace(/[^\w-]+/g, ""),
  }))
  .sort((a, b) => b.count - a.count);

// Format post data for display
const formatPost = (post) => ({
  title: post.data.title,
  excerpt: post.data.excerpt,
  date: post.data.pubDate.toLocaleDateString("en-US", {
    year: "numeric",
    month: "long",
    day: "numeric",
  }),
  readTime: post.data.readTime || "5 min read",
  slug: post.slug,
  image: post.data.image,
  tags: post.data.tags || [],
  category: post.data.category,
  author: {
    name: post.data.author,
    avatar: post.data.authorAvatar,
    bio: post.data.authorBio,
    role: post.data.authorRole,
  },
  audioUrl: post.data.audioUrl,
  featured: post.data.featured,
  trending: post.data.trending,
});
---

<Layout
  title={`Articles | ${SITE.name}`}
  description="Explore our latest articles on AI, product strategy, tech culture, and emerging technologies. Real insights for builders who value substance over hype."
>
  <!-- Blog Hero Section -->
  <section
    class="py-16 px-4 sm:px-6 bg-gradient-to-br from-zinc-50 to-white dark:from-zinc-900 dark:to-zinc-800"
  >
    <div class="max-w-6xl mx-auto text-center">
      <div
        class="inline-flex items-center gap-2 px-4 py-2 bg-zinc-100 dark:bg-zinc-800 rounded-full border border-zinc-200 dark:border-zinc-700 mb-6"
      >
        <div
          class="w-3 h-3 rounded-full bg-gradient-to-r from-blue-500 to-purple-500 animate-pulse"
        >
        </div>
        <span
          class="text-sm font-bold uppercase tracking-wider text-zinc-700 dark:text-zinc-300"
        >
          LATEST INSIGHTS
        </span>
      </div>

      <h1
        class="text-4xl lg:text-6xl font-bold text-zinc-900 dark:text-zinc-100 mb-6 font-space-grotesk uppercase tracking-wide"
      >
        ARTICLES
      </h1>

      <p
        class="text-xl text-zinc-600 dark:text-zinc-400 leading-relaxed max-w-3xl mx-auto mb-8"
      >
        Deep dives into technology, product strategy, and the future of digital
        innovation. Written by practitioners, for practitioners.
      </p>

      <div class="flex justify-center gap-8 text-center">
        <div>
          <div class="text-3xl font-bold text-zinc-900 dark:text-zinc-100">
            {allPosts.length}
          </div>
          <div
            class="text-sm text-zinc-500 dark:text-zinc-400 uppercase tracking-wider"
          >
            TOTAL ARTICLES
          </div>
        </div>
        <div>
          <div class="text-3xl font-bold text-zinc-900 dark:text-zinc-100">
            {featuredPosts.length}
          </div>
          <div
            class="text-sm text-zinc-500 dark:text-zinc-400 uppercase tracking-wider"
          >
            FEATURED
          </div>
        </div>
        <div>
          <div class="text-3xl font-bold text-zinc-900 dark:text-zinc-100">
            {categories.length}
          </div>
          <div
            class="text-sm text-zinc-500 dark:text-zinc-400 uppercase tracking-wider"
          >
            CATEGORIES
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Quick Navigation -->
  <section
    class="py-8 px-4 sm:px-6 border-b border-zinc-200 dark:border-zinc-800"
  >
    <div class="max-w-6xl mx-auto">
      <div class="flex flex-wrap items-center justify-between gap-4">
        <div class="flex flex-wrap items-center gap-4">
          <span
            class="text-sm font-bold uppercase tracking-wider text-zinc-500 dark:text-zinc-400"
          >
            BROWSE BY:
          </span>
          <div class="flex flex-wrap gap-2">
            <a
              href="/blog"
              class="px-3 py-1 bg-zinc-900 dark:bg-zinc-100 text-white dark:text-zinc-900 text-sm rounded-full font-medium uppercase tracking-wide"
            >
              ALL
            </a>
            <a
              href="/blog/categories"
              class="px-3 py-1 bg-zinc-100 dark:bg-zinc-800 text-zinc-700 dark:text-zinc-300 text-sm rounded-full hover:bg-zinc-200 dark:hover:bg-zinc-700 transition-colors font-medium uppercase tracking-wide"
            >
              CATEGORIES
            </a>
            {
              featuredPosts.length > 0 && (
                <a
                  href="/blog?filter=featured"
                  class="px-3 py-1 bg-zinc-100 dark:bg-zinc-800 text-zinc-700 dark:text-zinc-300 text-sm rounded-full hover:bg-zinc-200 dark:hover:bg-zinc-700 transition-colors font-medium uppercase tracking-wide"
                >
                  FEATURED
                </a>
              )
            }
            {
              trendingPosts.length > 0 && (
                <a
                  href="/blog?filter=trending"
                  class="px-3 py-1 bg-zinc-100 dark:bg-zinc-800 text-zinc-700 dark:text-zinc-300 text-sm rounded-full hover:bg-zinc-200 dark:hover:bg-zinc-700 transition-colors font-medium uppercase tracking-wide"
                >
                  TRENDING
                </a>
              )
            }
          </div>
        </div>

        <div class="flex items-center gap-4">
          <Button
            variant="outline"
            href="/search"
            size="sm"
            className="group uppercase tracking-wide"
          >
            <span class="flex items-center gap-1">
              <i class="fas fa-search text-xs"></i>
              SEARCH
            </span>
          </Button>
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Articles Section -->
  {
    featuredPosts.length > 0 && (
      <section class="py-16 px-4 sm:px-6">
        <div class="max-w-6xl mx-auto">
          <div class="flex items-center justify-between mb-12">
            <div>
              <h2 class="text-3xl font-bold text-zinc-900 dark:text-zinc-100 mb-4 font-space-grotesk uppercase tracking-wide">
                FEATURED ARTICLES
              </h2>
              <p class="text-lg text-zinc-600 dark:text-zinc-400">
                Hand-picked articles that showcase the best of our content
              </p>
            </div>
            <Button
              variant="ghost"
              href="/blog?filter=featured"
              className="group uppercase tracking-wide"
            >
              <span class="flex items-center gap-1">
                VIEW ALL FEATURED
                <i class="fas fa-arrow-right text-sm transition-transform duration-300 group-hover:translate-x-1" />
              </span>
            </Button>
          </div>

          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
            {featuredPosts.map((post) => (
              <ArticleCard {...formatPost(post)} />
            ))}
          </div>
        </div>
      </section>
    )
  }

  <!-- Main Articles Grid -->
  <section class="py-16 px-4 sm:px-6">
    <div class="max-w-6xl mx-auto">
      <div class="flex items-center justify-between mb-12">
        <div>
          <h2
            class="text-3xl font-bold text-zinc-900 dark:text-zinc-100 mb-4 font-space-grotesk uppercase tracking-wide"
          >
            LATEST ARTICLES
          </h2>
          <p class="text-lg text-zinc-600 dark:text-zinc-400">
            {allPosts.length} articles â€¢ Updated regularly
          </p>
        </div>
      </div>

      {
        paginatedPosts.length > 0 ? (
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
            {paginatedPosts.map((post) => (
              <ArticleCard {...formatPost(post)} />
            ))}
          </div>
        ) : (
          <div class="text-center py-16">
            <i class="fas fa-file-alt text-6xl text-zinc-300 dark:text-zinc-600 mb-4" />
            <h3 class="text-2xl font-bold text-zinc-900 dark:text-zinc-100 mb-4 uppercase tracking-wide">
              NO ARTICLES YET
            </h3>
            <p class="text-zinc-600 dark:text-zinc-400 mb-8">
              We're working on creating amazing content. Check back soon!
            </p>
            <Button
              href="/"
              variant="primary"
              className="uppercase tracking-wide"
            >
              BACK TO HOME
            </Button>
          </div>
        )
      }

      <!-- Pagination -->
      {
        totalPages > 1 && (
          <div class="flex justify-center mt-16">
            <div class="flex items-center gap-2">
              {currentPage > 1 && (
                <a
                  href={`/blog?page=${currentPage - 1}`}
                  class="px-4 py-2 bg-zinc-100 dark:bg-zinc-800 text-zinc-700 dark:text-zinc-300 rounded hover:bg-zinc-200 dark:hover:bg-zinc-700 transition-colors uppercase tracking-wide text-sm font-medium"
                >
                  PREVIOUS
                </a>
              )}

              {Array.from({ length: totalPages }, (_, i) => i + 1).map(
                (page) => (
                  <a
                    href={page === 1 ? "/blog" : `/blog?page=${page}`}
                    class={`px-4 py-2 rounded text-sm font-medium uppercase tracking-wide transition-colors ${
                      page === currentPage
                        ? "bg-zinc-900 dark:bg-zinc-100 text-white dark:text-zinc-900"
                        : "bg-zinc-100 dark:bg-zinc-800 text-zinc-700 dark:text-zinc-300 hover:bg-zinc-200 dark:hover:bg-zinc-700"
                    }`}
                  >
                    {page}
                  </a>
                )
              )}

              {currentPage < totalPages && (
                <a
                  href={`/blog?page=${currentPage + 1}`}
                  class="px-4 py-2 bg-zinc-100 dark:bg-zinc-800 text-zinc-700 dark:text-zinc-300 rounded hover:bg-zinc-200 dark:hover:bg-zinc-700 transition-colors uppercase tracking-wide text-sm font-medium"
                >
                  NEXT
                </a>
              )}
            </div>
          </div>
        )
      }
    </div>
  </section>

  <!-- Categories Section -->
  <section class="py-16 px-4 sm:px-6 bg-zinc-50 dark:bg-zinc-800/50">
    <div class="max-w-6xl mx-auto">
      <div class="flex items-center justify-between mb-12">
        <div>
          <h2
            class="text-3xl font-bold text-zinc-900 dark:text-zinc-100 mb-4 font-space-grotesk uppercase tracking-wide"
          >
            EXPLORE BY CATEGORY
          </h2>
          <p class="text-lg text-zinc-600 dark:text-zinc-400">
            Find articles that match your interests
          </p>
        </div>
        <Button
          variant="outline"
          href="/blog/categories"
          className="group uppercase tracking-wide"
        >
          <span class="flex items-center gap-1">
            ALL CATEGORIES
            <i
              class="fas fa-arrow-right text-sm transition-transform duration-300 group-hover:translate-x-1"
            ></i>
          </span>
        </Button>
      </div>

      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
        {
          categoryStats.slice(0, 8).map((category) => (
            <a
              href={`/blog/categories/${category.slug}`}
              class="group p-6 text-center rounded-lg border border-zinc-200 dark:border-zinc-700 bg-white dark:bg-zinc-800 hover:bg-zinc-50 dark:hover:bg-zinc-700/50 transition-all duration-300 hover:shadow-lg hover:-translate-y-1"
            >
              <div class="text-lg font-bold text-zinc-900 dark:text-zinc-100 mb-2 group-hover:text-zinc-700 dark:group-hover:text-zinc-300 transition-colors uppercase tracking-wide">
                {category.name}
              </div>
              <div class="text-sm text-zinc-600 dark:text-zinc-400 mb-3">
                {category.count} {category.count === 1 ? "article" : "articles"}
              </div>
              <div class="text-xs text-zinc-500 dark:text-zinc-400 uppercase tracking-wider group-hover:text-zinc-700 dark:group-hover:text-zinc-300 transition-colors">
                EXPLORE â†’
              </div>
            </a>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Newsletter CTA -->
  <section
    class="py-16 px-4 sm:px-6 border-t border-zinc-200 dark:border-zinc-800"
  >
    <div class="max-w-4xl mx-auto text-center">
      <h2
        class="text-3xl font-bold text-zinc-900 dark:text-zinc-100 mb-4 font-space-grotesk uppercase tracking-wide"
      >
        NEVER MISS AN INSIGHT
      </h2>
      <p class="text-lg text-zinc-600 dark:text-zinc-400 mb-8">
        Get the week's best articles delivered to your inbox. Join our community
        of forward-thinking professionals.
      </p>
      <Button
        variant="primary"
        href="/newsletter"
        size="lg"
        className="uppercase tracking-wide"
      >
        SUBSCRIBE TO NEWSLETTER
      </Button>
    </div>
  </section>
</Layout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  /* Card hover effects */
  .group:hover {
    transform: translateY(-2px);
  }

  /* Performance optimizations */
  .transition-all {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  /* Mobile optimizations */
  @media (max-width: 768px) {
    .group:hover {
      transform: none;
    }
  }

  /* Accessibility */
  @media (prefers-reduced-motion: reduce) {
    .transition-all,
    .group:hover {
      transition: none;
      transform: none;
    }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    // Search functionality
    const searchButton = document.querySelector('a[href="/search"]');
    if (searchButton) {
      searchButton.addEventListener("click", (e) => {
        e.preventDefault();
        // Implement search modal or redirect to search page
        console.log("Search functionality to be implemented");
      });
    }

    // Filter functionality
    const filterButtons = document.querySelectorAll('a[href*="filter="]');
    filterButtons.forEach((button) => {
      button.addEventListener("click", (e) => {
        // Add active state handling
        const currentActive = document.querySelector(".filter-active");
        if (currentActive) {
          currentActive.classList.remove("filter-active");
        }
        button.classList.add("filter-active");
      });
    });

    // Intersection Observer for animations
    const observerOptions = {
      threshold: 0.1,
      rootMargin: "0px 0px -50px 0px",
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          entry.target.classList.add("animate-in");
          observer.unobserve(entry.target);
        }
      });
    }, observerOptions);

    // Observe article cards
    document.querySelectorAll(".group").forEach((el) => {
      observer.observe(el);
    });

    // Analytics tracking
    const trackEvent = (eventName, properties = {}) => {
      console.log(`Event: ${eventName}`, properties);
      // Integrate with your analytics service
    };

    // Track article clicks
    document.querySelectorAll('a[href*="/blog/"]').forEach((link) => {
      link.addEventListener("click", () => {
        const articleTitle = link.querySelector("h3")?.textContent || "Unknown";
        trackEvent("article_clicked", {
          title: articleTitle,
          url: link.href,
        });
      });
    });

    // Track category clicks
    document
      .querySelectorAll('a[href*="/blog/categories/"]')
      .forEach((link) => {
        link.addEventListener("click", () => {
          const categoryName = link.textContent?.trim() || "Unknown";
          trackEvent("category_clicked", {
            category: categoryName,
            url: link.href,
          });
        });
      });
  });
</script>
