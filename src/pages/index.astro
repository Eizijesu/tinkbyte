    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 0.75rem;
    color: #9ca3af;
    transition: color 0.3s ease;
  }

  :global(.dark) .story-footer {
    color: rgb(107, 114, 128);
  }

  .sidebar-cta {
    padding-top: 1.5rem;
    border-top: 1px solid #e5e7eb;
  }

  :global(.dark) .sidebar-cta {
    border-top-color: rgb(55, 65, 81);
  }

  .view-all-link {
    display: inline-flex;
    align-items: center;
    font-size: 0.875rem;
    font-weight: 600;
    color: rgb(59, 130, 246);
