    color: rgb(243, 244, 246);
  }

  .story-excerpt {
    font-size: 0.875rem;
    line-height: 1.5;
    color: #6b7280;
    margin-bottom: 0.75rem;
    transition: color 0.3s ease;
  }

  :global(.dark) .story-excerpt {
    color: rgb(156, 163, 175);
  }

