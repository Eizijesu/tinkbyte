---
// src/pages/404.astro - FIXED with perfect square design
import Layout from "../layouts/Layout.astro";
import Button from "../components/ui/Button.astro";
import { getCollection } from "astro:content";

// Get real recent articles from your blog
const allPosts = await getCollection("blog", ({ data }) => !data.draft);
const recentArticles = allPosts
  .sort(
    (a, b) =>
      new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime()
  )
  .slice(0, 3)
  .map((post) => ({
    title: post.data.title,
    href: `/blog/${post.slug}`,
    date: post.data.pubDate.toLocaleDateString("en-US", {
      month: "short",
      day: "numeric",
      year: "numeric",
    }),
    category: post.data.category,
    excerpt: post.data.excerpt,
  }));

// Popular pages with correct URLs
const popularPages = [
  { title: "Latest Articles", href: "/blog", icon: "fas fa-newspaper" },
  { title: "Categories", href: "/blog/categories", icon: "fas fa-folder" },
  { title: "Authors", href: "/blog/authors", icon: "fas fa-users" },
  { title: "Newsletter", href: "/newsletter", icon: "fas fa-paper-plane" },
  { title: "Featured Content", href: "/featured", icon: "fas fa-star" },
  { title: "Audio Content", href: "/audio", icon: "fas fa-headphones" },
];

// Get categories for suggestions
const allCategories = [
  ...new Set(allPosts.map((post) => post.data.category).filter(Boolean)),
];
const topCategories = allCategories.slice(0, 4).map((category) => ({
  name: category as string,
  slug: (category as string).toLowerCase().replace(/\s+/g, "-"),
  count: allPosts.filter((post) => post.data.category === category).length,
}));
---

<Layout
  title="Page Not Found | TinkByte"
  description="The page you're looking for doesn't exist. Explore our latest tech insights and articles instead."
>
  <!-- Enhanced 404 Hero -->
  <section class="relative py-16 lg:py-24 overflow-hidden">
    <div
      class="absolute inset-0 bg-gradient-to-r from-blue-600 via-purple-600 to-indigo-600 opacity-5"
    >
    </div>

    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-4xl mx-auto text-center">
        <!-- 404 Animation -->
        <div class="error-display">
          <div class="error-number">404</div>
          <div class="error-icon">
            <i class="fas fa-compass"></i>
          </div>
        </div>

        <!-- Error Message -->
        <div class="error-badge">
          <div class="status-indicator"></div>
          <span class="status-text"> PAGE NOT FOUND </span>
        </div>

        <h1 class="error-title">
          Lost in the
          <span class="gradient-text"> Digital Space </span>
        </h1>

        <p class="error-description">
          The page you're looking for doesn't exist or has been moved. Let's get
          you back on track with some helpful options.
        </p>

        <!-- Action Buttons -->
        <div class="error-actions">
          <Button variant="primary" href="/" className="error-action-btn">
            <i class="fas fa-home mr-2"></i>
            GO HOME
          </Button>

          <Button variant="outline" href="/blog" className="error-action-btn">
            <i class="fas fa-newspaper mr-2"></i>
            BROWSE ARTICLES
          </Button>
        </div>
      </div>
    </div>
  </section>

  <!-- Popular Pages Section -->
  <main class="error-page">
    <div class="max-w-7xl mx-auto px-4 py-12">
      <section class="mb-16">
        <h2 class="section-title">
          <i class="fas fa-star mr-3 text-yellow-500"></i>
          Popular Pages
        </h2>

        <div class="popular-pages-grid">
          {
            popularPages.map((page) => (
              <a href={page.href} class="popular-page-card">
                <div class="card-content">
                  <div class="page-icon">
                    <i class={page.icon} />
                  </div>
                  <div class="page-info">
                    <h3 class="page-title">{page.title}</h3>
                  </div>
                  <div class="page-arrow">
                    <i class="fas fa-arrow-right" />
                  </div>
                </div>
              </a>
            ))
          }
        </div>
      </section>

      <!-- Recent Articles Section -->
      {
        recentArticles.length > 0 && (
          <section class="mb-16">
            <h2 class="section-title">
              <i class="fas fa-clock mr-3 text-blue-600" />
              Recent Articles
            </h2>

            <div class="recent-articles-grid">
              {recentArticles.map((article, index) => (
                <article
                  class="recent-article-card"
                  style={`--animation-delay: ${index * 0.1}s`}
                >
                  <a href={article.href} class="article-link">
                    <div class="article-content">
                      <div class="article-meta">
                        {article.category && (
                          <span class="article-category">
                            {article.category}
                          </span>
                        )}
                        <span class="article-date">{article.date}</span>
                      </div>
                      <h3 class="article-title">{article.title}</h3>
                      {article.excerpt && (
                        <p class="article-excerpt">
                          {article.excerpt.slice(0, 120)}...
                        </p>
                      )}
                      <div class="article-arrow">
                        <i class="fas fa-arrow-right" />
                      </div>
                    </div>
                  </a>
                </article>
              ))}
            </div>

            <div class="section-footer">
              <Button variant="outline" href="/blog" className="view-all-btn">
                <span class="flex items-center gap-2">
                  VIEW ALL ARTICLES
                  <i class="fas fa-arrow-right text-sm" />
                </span>
              </Button>
            </div>
          </section>
        )
      }

      <!-- Categories Section -->
      {
        topCategories.length > 0 && (
          <section class="mb-16">
            <h2 class="section-title">
              <i class="fas fa-folder mr-3 text-green-600" />
              Browse by Category
            </h2>

            <div class="categories-grid">
              {topCategories.map((category) => (
                <a
                  href={`/blog/categories/${category.slug}`}
                  class="category-card"
                >
                  <div class="category-content">
                    <h3 class="category-name">{category.name}</h3>
                    <p class="category-count">{category.count} articles</p>
                    <div class="category-arrow">
                      <i class="fas fa-arrow-right" />
                    </div>
                  </div>
                </a>
              ))}
            </div>
          </section>
        )
      }
    </div>
  </main>

  <!-- Help Section -->
  <section class="help-section">
    <div class="max-w-2xl mx-auto text-center">
      <h2 class="help-title">Still Can't Find What You're Looking For?</h2>

      <p class="help-description">
        Our team is here to help. Reach out and we'll get you pointed in the
        right direction.
      </p>

      <div class="help-actions">
        <Button
          variant="primary"
          href="/newsletter"
          className="help-action-btn"
        >
          <i class="fas fa-envelope mr-2"></i>
          SUBSCRIBE TO NEWSLETTER
        </Button>

        <Button
          variant="outline"
          href="/blog/categories"
          className="help-action-btn"
        >
          <i class="fas fa-th-large mr-2"></i>
          EXPLORE CATEGORIES
        </Button>
      </div>
    </div>
  </section>
</Layout>

<style>
  /* CSS Custom Properties for Consistent Design */
  :root {
    --tinkbyte-radius: 0px;
    --tinkbyte-radius-sm: 0px;
    --tinkbyte-radius-md: 0px;
    --tinkbyte-radius-lg: 0px;
    --tinkbyte-radius-card: 0px;
    --tinkbyte-radius-button: 0px;
  }

  /* Error Page Styling */
  .error-page {
    font-family: "Space Grotesk", sans-serif;
    background-color: var(--color-bg-primary);
    color: var(--color-text-primary);
  }

  /* Error Display */
  .error-display {
    position: relative;
    margin-bottom: 2rem;
  }

  .error-number {
    font-size: 8rem;
    font-weight: 900;
    color: var(--color-text-muted);
    opacity: 0.3;
    line-height: 1;
    margin-bottom: 1rem;
    user-select: none;
  }

  .error-icon {
    font-size: 4rem;
    color: #243788;
    animation: float 3s ease-in-out infinite;
  }

  @keyframes float {
    0%,
    100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-20px);
    }
  }

  /* Error Badge */
  .error-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: rgba(255, 255, 255, 0.8);
    border: 2px solid #e2e8f0;
    border-radius: var(--tinkbyte-radius-button);
    backdrop-filter: blur(4px);
    margin-bottom: 1.5rem;
  }

  :global(.dark) .error-badge {
    background: rgba(30, 41, 59, 0.8);
    border-color: rgb(51, 65, 85);
  }

  .status-indicator {
    width: 0.75rem;
    height: 0.75rem;
    background: #ef4444;
    border-radius: 50%;
    animation: pulse 2s infinite;
  }

  .status-text {
    font-size: 0.875rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: #374151;
  }

  :global(.dark) .status-text {
    color: rgb(209, 213, 219);
  }

  /* Error Title */
  .error-title {
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    font-weight: 700;
    color: #111827;
    margin-bottom: 1.5rem;
    line-height: 1.2;
  }

  :global(.dark) .error-title {
    color: rgb(248, 250, 252);
  }

  .gradient-text {
    background: linear-gradient(135deg, #2563eb 0%, #7c3aed 100%);
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 200% 200%;
    animation: gradient 3s ease-in-out infinite;
  }

  @keyframes gradient {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }

  /* Error Description */
  .error-description {
    font-size: 1.25rem;
    color: #6b7280;
    line-height: 1.6;
    max-width: 48rem;
    margin: 0 auto 2rem;
  }

  :global(.dark) .error-description {
    color: rgb(156, 163, 175);
  }

  /* Error Actions */
  .error-actions {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    justify-content: center;
    align-items: center;
  }

  @media (min-width: 640px) {
    .error-actions {
      flex-direction: row;
    }
  }

  /* Section Styling */
  .section-title {
    font-size: 2rem;
    font-weight: 800;
    color: var(--color-text-primary);
    margin-bottom: 2rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .section-footer {
    text-align: center;
    margin-top: 2rem;
  }

  /* Popular Pages Grid */
  .popular-pages-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1.5rem;
    margin-bottom: 2rem;
  }

  .popular-page-card {
    background: var(--color-bg-primary);
    border: 2px solid var(--color-border);
    border-radius: var(--tinkbyte-radius-card);
    padding: 1.5rem;
    text-decoration: none;
    transition: all 0.3s ease;
    display: block;
  }

  .popular-page-card:hover {
    border-color: #243788;
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
  }

  :global(.dark) .popular-page-card:hover {
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.3);
  }

  .card-content {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .page-icon {
    width: 3rem;
    height: 3rem;
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: var(--tinkbyte-radius-sm);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.25rem;
    color: var(--color-text-secondary);
    flex-shrink: 0;
    transition: all 0.3s ease;
  }

  .popular-page-card:hover .page-icon {
    background: #243788;
    color: white;
    border-color: #243788;
  }

  .page-info {
    flex: 1;
  }

  .page-title {
    font-size: 1rem;
    font-weight: 700;
    color: var(--color-text-primary);
    text-transform: uppercase;
    letter-spacing: 0.025em;
    margin: 0;
  }

  .page-arrow {
    color: var(--color-text-muted);
    transition: all 0.3s ease;
  }

  .popular-page-card:hover .page-arrow {
    color: #243788;
    transform: translateX(4px);
  }

  /* Recent Articles Grid */
  .recent-articles-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
  }

  .recent-article-card {
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 0.6s ease forwards;
    animation-delay: var(--animation-delay, 0s);
  }

  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .article-link {
    display: block;
    background: var(--color-bg-primary);
    border: 2px solid var(--color-border);
    border-radius: var(--tinkbyte-radius-card);
    padding: 1.5rem;
    text-decoration: none;
    transition: all 0.3s ease;
    height: 100%;
  }

  .article-link:hover {
    border-color: #243788;
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
  }

  :global(.dark) .article-link:hover {
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.3);
  }

  .article-content {
    position: relative;
  }

  .article-meta {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .article-category {
    font-size: 0.75rem;
    font-weight: 700;
    color: #243788;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .article-date {
    font-size: 0.75rem;
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .article-title {
    font-size: 1.125rem;
    font-weight: 700;
    color: var(--color-text-primary);
    margin-bottom: 0.75rem;
    line-height: 1.3;
    text-transform: uppercase;
    letter-spacing: 0.025em;
  }

  .article-excerpt {
    font-size: 0.875rem;
    color: var(--color-text-secondary);
    line-height: 1.4;
    margin-bottom: 1rem;
  }

  .article-arrow {
    position: absolute;
    top: 0;
    right: 0;
    color: var(--color-text-muted);
    transition: all 0.3s ease;
  }

  .article-link:hover .article-arrow {
    color: #243788;
    transform: translateX(4px);
  }

  /* Categories Grid */
  .categories-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
  }

  .category-card {
    background: var(--color-bg-secondary);
    border: 2px solid var(--color-border);
    border-radius: var(--tinkbyte-radius-card);
    padding: 1.5rem;
    text-decoration: none;
    transition: all 0.3s ease;
    display: block;
  }

  .category-card:hover {
    border-color: #243788;
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
  }

  :global(.dark) .category-card:hover {
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.3);
  }

  .category-content {
    position: relative;
  }

  .category-name {
    font-size: 1rem;
    font-weight: 700;
    color: var(--color-text-primary);
    margin-bottom: 0.5rem;
    text-transform: uppercase;
    letter-spacing: 0.025em;
  }

  .category-count {
    font-size: 0.875rem;
    color: var(--color-text-secondary);
    margin: 0;
  }

  .category-arrow {
    position: absolute;
    top: 0;
    right: 0;
    color: var(--color-text-muted);
    transition: all 0.3s ease;
  }

  .category-card:hover .category-arrow {
    color: #243788;
    transform: translateX(4px);
  }

  /* Help Section */
  .help-section {
    padding: 4rem 1rem;
    background: #f8fafc;
    border-top: 2px solid #e2e8f0;
  }

  :global(.dark) .help-section {
    background: rgba(30, 41, 59, 0.5);
    border-top-color: rgb(51, 65, 85);
  }

  .help-title {
    font-size: 2rem;
    font-weight: 700;
    color: #111827;
    margin-bottom: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  :global(.dark) .help-title {
    color: rgb(248, 250, 252);
  }

  .help-description {
    color: #6b7280;
    margin-bottom: 2rem;
    line-height: 1.6;
  }

  :global(.dark) .help-description {
    color: rgb(156, 163, 175);
  }

  .help-actions {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    justify-content: center;
    align-items: center;
  }

  @media (min-width: 640px) {
    .help-actions {
      flex-direction: row;
    }
  }

  /* Action Buttons */
  .error-action-btn,
  .view-all-btn,
  .help-action-btn {
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-weight: 700;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .error-number {
      font-size: 6rem;
    }

    .error-icon {
      font-size: 3rem;
    }

    .section-title {
      font-size: 1.5rem;
      flex-direction: column;
      gap: 0.5rem;
    }

    .section-title i {
      margin-right: 0;
    }

    .popular-pages-grid,
    .recent-articles-grid,
    .categories-grid {
      grid-template-columns: 1fr;
    }

    .error-title {
      font-size: clamp(2rem, 4vw, 2.5rem);
    }

    .error-description {
      font-size: 1rem;
      padding: 0 1rem;
    }

    .help-title {
      font-size: 1.5rem;
    }
  }

  @media (max-width: 480px) {
    .error-number {
      font-size: 4rem;
    }

    .error-icon {
      font-size: 2.5rem;
    }

    .popular-page-card,
    .article-link,
    .category-card {
      padding: 1rem;
    }

    .help-section {
      padding: 2rem 1rem;
    }
  }

  /* Animation optimizations */
  @media (prefers-reduced-motion: reduce) {
    .error-icon,
    .status-indicator,
    .gradient-text {
      animation: none;
    }

    .recent-article-card {
      opacity: 1;
      transform: none;
      animation: none;
    }

    .popular-page-card:hover,
    .article-link:hover,
    .category-card:hover {
      transform: none;
    }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    // Staggered animation for article cards
    const articleCards = document.querySelectorAll(".recent-article-card");

    articleCards.forEach((card, index) => {
      // FIXED: Proper TypeScript casting
      const htmlCard = card as HTMLElement;
      htmlCard.style.setProperty("--animation-delay", `${index * 0.1}s`);
    });

    // Track 404 page interactions with proper typing
    const links = document.querySelectorAll('a[href^="/"]');
    links.forEach((link) => {
      link.addEventListener("click", () => {
        // FIXED: Proper window.gtag type checking
        if (typeof window !== "undefined" && "gtag" in window) {
          const gtag = (window as any).gtag;
          if (typeof gtag === "function") {
            gtag("event", "404_page_navigation", {
              event_category: "404 Page",
              event_label: (link as HTMLAnchorElement).href,
              timestamp: Date.now(),
            });
          }
        }
      });
    });

    // Enhanced error page analytics
    if (typeof window !== "undefined" && "gtag" in window) {
      const gtag = (window as any).gtag;
      if (typeof gtag === "function") {
        gtag("event", "404_page_view", {
          event_category: "404 Page",
          page_title: document.title,
          page_location: window.location.href,
          timestamp: Date.now(),
        });
      }
    }

    // Log 404 for debugging (development only)
    if (import.meta.env.DEV) {
      console.warn(`404 Page accessed: ${window.location.href}`);
    }
  });

  // Handle Astro page navigation
  document.addEventListener("astro:page-load", () => {
    setTimeout(() => {
      const event = new Event("DOMContentLoaded");
      document.dispatchEvent(event);
    }, 100);
  });
</script>
