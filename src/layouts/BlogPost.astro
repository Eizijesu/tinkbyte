            } else {
              console.warn("⚠️ Supabase not available");
            }

            // Set up audio error handler
            window.handleAudioError = function (audioElement) {
              const originalSrc = audioElement.src;
              console.log("Audio file not found:", originalSrc);
              audioElement.style.display = "none";

              const container = audioElement.closest(
                ".audio-section-enhanced, .audio-player-container, .audio-container"
              );
              if (container) {
                const errorDiv = document.createElement("div");
                errorDiv.className =
                  "audio-error-message bg-yellow-50 dark:bg-yellow-900/20 border border-yellow-200 dark:border-yellow-800 rounded-lg p-4 text-center";
                errorDiv.innerHTML = `
          <div class="flex items-center justify-center text-yellow-700 dark:text-yellow-300">
            <i class="fas fa-exclamation-triangle mr-2"></i>
            <span>Audio version coming soon</span>
          </div>
          <p class="text-sm text-yellow-600 dark:text-yellow-400 mt-1">
            We're working on adding audio for this article
