            // Enhanced reading progress functionality
            const progressRing = document.querySelector(
              ".progress-ring-circle"
            );
            const progressText = document.querySelector(".progress-text");

            if (progressRing && progressText) {
              const radius = 26;
              const circumference = radius * 2 * Math.PI;
              progressRing.style.strokeDasharray = `${circumference} ${circumference}`;
              progressRing.style.strokeDashoffset = circumference.toString();

              function updateProgress() {
                const article = document.querySelector(
                  ".content-main-enhanced"
                );
                if (article) {
                  const scrollTop =
                    window.pageYOffset || document.documentElement.scrollTop;
                  const docHeight =
                    document.documentElement.scrollHeight - window.innerHeight;
                  const progress = Math.min((scrollTop / docHeight) * 100, 100);

                  const offset =
                    circumference - (progress / 100) * circumference;
                  progressRing.style.strokeDashoffset = offset.toString();
                  progressRing.style.stroke =
                    progress > 0 ? "rgb(59, 130, 246)" : "#e2e8f0";
                  progressText.textContent = Math.round(progress) + "%";
                }
              }

              let ticking = false;
              function handleScroll() {
                if (!ticking) {
                  requestAnimationFrame(() => {
                    updateProgress();
                    ticking = false;
                  });
                  ticking = true;
                }
