                    const targetId = this.getAttribute("href")?.substring(1);
                    const targetHeading = targetId
                      ? document.getElementById(targetId)
                      : null;
                    if (targetHeading) {
                      targetHeading.scrollIntoView({
                        behavior: "smooth",
                        block: "start",
                      });
                    }

                    document
                      .querySelectorAll(".toc-link")
