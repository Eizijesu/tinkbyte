        color: var(--color-accent-hover);
        text-decoration: underline;
      }

      /* Button improvements */
      button {
        cursor: pointer;
        transition: all 0.2s ease;
      }

      button:hover {
        transform: translateY(-1px);
      }

      button:active {
        transform: translateY(0);
      }

      /* Focus states for accessibility */
      button:focus,
      input:focus,
